<h1>Create a new Owner</h1>

<form action="/owners" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="owner[name]"></input>

  <br></br>

  <label>Choose an existing pet:</label>

  <br></br>

  <% @pets.each do |pet| %>
    <input type="checkbox" name="owner[pet_ids][]" value="<%= pet.id %>" id="<%= pet.id %>"><%= pet.name %></input>
  <% end %>

  <br></br>

  <label>and/or Create a New Pet</label>

  <br></br>
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet[name]" placeholder="Pet's Name"></input>

  <br></br>

  <input type="submit" value="Create Owner"></input>
</form>
