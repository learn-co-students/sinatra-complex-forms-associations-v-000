<h1>Create a new Owner</h1>

<form action="/owners" method="POST">
  <label for="name">Name:</label>

  <br></br>

  <input type="text" name="owner[name]" id="name">

  <br></br>

  <label for="pets">Avalaible Pets:</label>

  <br></br>

  <% @pets.each do |pet| %>
    <input type="checkbox" name="owner[pet_ids][]" value="<%= pet.id %>" id="<%= pet.id %>"><%= pet.name %><br>
  <% end %>

  <br></br>

    <label>And/or, create a new pet:</label>
    <br></br>
    <label>Name:</label>
      <input  type="text" name="pet[name]" id="pet_name"></input>
    <br></br>
  <input type="submit" value="Create Owner">
</form>
