<h1>Create a new Owner</h1>

<form action="/owners" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="owner[name]">

  <br></br>
  <% Pet.all.each do |pet| %>
  <input type="checkbox" name="owner[pet_ids][]" value="<%= pet.id %>" id="<%= pet.id %>"><%= pet.name %></input><br>
  <% end %>

  <br><br>

<label>and/or, create a new pet:</label>

  <br><br>

  <label for="">Name: </label>
    <input type="text" name="pet[name]" value=""></input>

    <br><br>
  <input type="submit" value="Create Owner">
</form>
