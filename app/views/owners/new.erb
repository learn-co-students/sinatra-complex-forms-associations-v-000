<h1>Create a new Owner</h1>

<form action="/owners" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="owner[name]">

  <br></br>

  <label>Select Cats for Owner:</label>
  <% Pet.all.each do |p| %>
    <input type="checkbox" id="<%=p.id%>" value="<%=p.id%>" name="owner[pet_ids][]"><%=p.name%></input>
  <% end %>

  <br></br>

    <label>and/or, create a new pet:</label>
    <br></br>
    <label>name:</label>
      <input type="text" name="pet[name]">
    <br></br>
  <input type="submit" value="Create Owner">
</form>
