<h1>Create a new Owner</h1>

<form action="/owners" method="POST">

  <label>Name:</label> <br>
  <input type="text" name="owner[name]"> <br>

  <br>

  <% @pets.each do |pet| %>
    <input type="checkbox" value="<%= pet.id %>" name="owner[pet_ids][]" id="<%= pet.id %>">
    <%= pet.name %>
    </input>
  <% end %> <br>
  
  <br>

  <label>and/or, create a new pet:</label> <br>

  <br>

  <label>name: <input type="text" name="pet[name]" id="pet_name"></label> <br>

  <br>

  <input type="submit" value="Create Owner">

</form>
