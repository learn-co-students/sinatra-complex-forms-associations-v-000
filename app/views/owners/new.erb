<h1>Create a new Owner</h1>

<form action="/owners" method="POST">
  <label>Owner Name:</label> <!--label-->

  <br></br>

  <input type="text" name="owner[name]"> <!--field-->

  <br></br>

<h3>Choose an existing pet</h3>

<%@pets.each do |pet|%>
    <input type="checkbox" name="owner[pet_ids][]" value="<%=pet.id%>" id="<%=pet.id%>"><%=pet.name%></input>
<%end%>
<br>
<br>
<h3>And/or, create a new pet:</h3>
    <label>New pet name:</label>
      <input  type="text" name="pet[name]"></input>
    <br></br>
    <p><input type="submit" value="Create Owner"></p>  <!--button-->
</form>
