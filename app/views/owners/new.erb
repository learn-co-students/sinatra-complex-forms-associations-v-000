<h1>Create a new Owner</h1>

<form action="/owners" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="owner[name]">

  <br></br>

  <% @pets.each do |pet| %>
    <input type="checkbox" name="owner[pet_ids][]" value="<%= pet.id %>" id="<%= pet.id %>">
      <%= pet.name %>
    </input>
  <% end %>

  <br>

  <label for="pet[name]">New Pet Name: </label>
  <input type="text" name="pet[name]" id="pet[name]">

  <br>

  <input type="submit" value="Create Owner">
</form>
