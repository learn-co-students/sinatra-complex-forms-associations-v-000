<h1>Create a new Owner</h1>

<form action="/owners" method="POST">
  <label for="owner_name">Name:</label>
  <br></br>
  <input type="text" name="owner[name]" id="owner_name">
  <br></br>

  <label>Choose an existing pet:</label><br></br>

  <% @pets.each do |pet| %>
  <input type="checkbox" name="owner[pet_ids][]" value="<%=pet.id%>" id="<%=pet.id%>"><%=pet.name%></input><br></br>
  <%end%>

  <br></br>

  <label for="pet_name">or, create a new pet:</label><br></br>

  <label for="pet_name">name: </label>
  <input type="text" name="pet[name]" id="pet_name"></input><br></br>

  <p><input type="submit" value="Create Owner"></p>

</form>
