<h1>Create a new Owner</h1>

<form action="/owners" method="POST">
  <label>Owner Name:</label><br>

  <input type="text" id="owner[name]" name="owner[name]"><br>

  <%@pets.each do |pet|%>
    <input type="checkbox" name="owner[pet_ids][]" value="<%=pet.id%>" id="<%=pet.id%>"><%=pet.name%></input>
  <%end%>

  <br>

    <label>and/or, create a new pet:</label><br>
    <label>Name:</label>
      <input  type="text" name="pet[name]"></input><br>
  <button type="submit" value="Create Owner">Create Owner</button>
</form>
