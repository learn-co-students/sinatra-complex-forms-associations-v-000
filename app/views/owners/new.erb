<h1>Create a new Owner</h1>

<form action="/owners" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="owner[name]" id="owner_id">
  <br><br>

  Choose an exsiting pet: <br><br>

  <%Pet.all.each do |pet|%>
    <input type="checkbox" name="owner[pet_ids][]" id="<%=pet.id%>" value="<%=pet.id%>"><%=pet.name%></input>
    <%end%>


  <br></br>

  <label>And/Or crete a new pet:</label>
  <br><br>
    <label>Name: </label><br><br>
    <input type="text" name="pet[name]" value="">
    <br><br>
  <input type="submit" value="Create Owner">
</form>
