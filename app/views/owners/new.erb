<h1>Create a new Owner</h1>

<form action="/owners" method="POST">
  <label for="owner_name">Name:</label>

  <br>

  <input type="text" id = "owner_name" name="owner[name]">

  <br>

  <label>Choose an existing pet:</label>

  <br>

  <% @pets.each do |pet| %>
    <input type="checkbox" id="<%= pet.id %>" name="owner[pet_ids][]" value="<%= pet.id %>"><%= pet.name %></input>
  <% end %>

  <br>

  <label>and/or create a new pet:</label>

  <br>

  <label for="pet_name">Pet Name:</label>
  <input type="text" id="pet_name" name="pet[name]">

  <br>

  <input type="submit" value="Create Owner">
</form>
