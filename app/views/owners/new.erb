<h1>Create a new Owner</h1>

<form action="/owners" method="POST">
  <label>Owner Name:</label>

  <br>

  <input type="text" name="owner[name]" id="owner_name">
  <p>Select an existing pet or create a new one below.</p>
  <h3>Existing Pets</h3>
  <% @pets.each do |pet| %>
    <input type="checkbox" name="owner[pet_ids][]" id="<%= pet.id %>" value="<%= pet.id %>"><%= pet.name %><br> <!-- id is just for capybara test, value is for when the checkbox is selected, the pet's ID gets sent to the params hash -->
  <% end %>
  <br>

  <h3>New Pet</h3>
  <br>
  <label>Pet Name:</label>
    <input type="text" name="pet[name]" id="pet_name"></input>
  <br><br>
  <input type="submit" value="Create Owner">
</form>
