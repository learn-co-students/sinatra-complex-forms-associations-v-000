<h1>Update Owner</h1>


<form action="/owners/<%=@owner.id%>" method="POST">
	<label>Name:</label> <br>

	<input type="text" name="owner[name]" id="owner_name" value="<%=@owner.name%>"> <br>

	<label>Choose and existing pet:</label> <br>

	<%Pet.all.each do |pet|%>
		<input type="checkbox" name="owner[pet_ids][]" id="<%= pet.id%>" value="<%=pet.id%>" <%='checked' if @owner.pets.include?(pet) %>>
		<%=pet.name%>
		<%end%>
		<br>
		<label>and/or, create a new pet:</label> <br>
		<label>Name:</label>
		<input  type="text" name="pet[name]" id="pet_name"></input> <br>
		<input type="submit" value="Update Owner">
</form>