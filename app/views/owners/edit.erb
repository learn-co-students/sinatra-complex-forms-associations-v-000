<h1>Update Owner</h1>

<form action="/owners/<%=@owner.id%>" method="POST">
  <input type="hidden" name="_method" id="hidden" value="PATCH">
  <label>Name:</label>
  
  <br>
  
  <input type="text" name="owner[name]" id="owner_name" value="<%=@owner.name%>">
  
  <br>
  <label>Choose an existing pet:</label>
  <br>
  <%@pets.each do |pet|%>
    <input type="checkbox" name="owner[pet_ids][]" id="<%= pet.id%>" value="<%=pet.id%>" <%='checked' if @owner.pets.include?(pet)%>> <%=pet.name%>  
  <%end%>
  
  <br>
  <label>And/or create a pet for owner</label>
  <br>
  <label for="pet_name">Name:</label>
  <input type="text" name="pet[name]" id="pet_name">
  
  <br>
  
  <input type="submit" value="Update Owner">
</form>