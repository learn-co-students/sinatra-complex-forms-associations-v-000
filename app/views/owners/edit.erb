<h1>Update Owner</h1>

<form action="/owners/<%=owner.id%>" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="owner[name]" id="owner_name" value="<%=@owner.name%>">

  <br></br>

  <% Pet. each do |pet| %>
  <input type="checkbox" name="owner[pet_ids][]" value="<%=pet.id%>" id="<%=pet.id%>" value="<%=pet.id%>" <%='checked' if @owner.pets.include?(pet)%>><%pet.name%></input>
  <%end%>
  <label>and/or, create a new pet:</label>
  <br></br>
  <label>name:</label>
    <input type="text" name="pet[name]"></input>
  <input type="submit" value="Update Owner">
</form>
