<h1>Update Owner</h1>


<form action="/owners/<%=@owner.id%>" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="owner[name]" value="<%= @owner.name %>">

  <br></br>

<% @pets.each do |p_obj| %>
  <input type="checkbox" name="owner[pet_ids][]" value="<%= p_obj.id %>" id="<%=p_obj.id%>" <%= 'checked' if @owner.pets.include?(p_obj) %>><%= p_obj.name %></input>
<% end %>

  <br></br>

  <label>and/or, create a new pet:</label>
  <br></br>
  <label>name:</label>
    <input  type="text" name="pet[name]"></input>
  <br></br>

  <input type="submit" value="Update Owner">
</form>
