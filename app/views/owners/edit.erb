<h1>Update Owner</h1>

<form method="post" action="/owners/<%= @owner.id %>">
<!--   <input type="hidden" name="_method" value="patch" id="hidden"> -->
  <label>name:</label>
  <br></br>
  <input type="text" name="owner[name]" id="owner_name" value="<%= @owner.name %>">
  <br></br>
  <label>choose an existing pet</label>
  <br></br>
    <% Pet.all.each do |x| %>
      <input type="checkbox" name="owner[pet_ids][]" id="<%= x.id %>" value="<%= x.id %>" <%= 'checked' if @owner.pets.include?(x) %>><%= x.name %></input>
    <% end %>
  <br></br>
  <label>and or create a new pet</label>
  <br></br>
  <label>name:</label>
  <br></br>
  <input type="text" name="pet[name]" id="pet_name"></input>
  <input type="submit" value="Update Owner">
</form>