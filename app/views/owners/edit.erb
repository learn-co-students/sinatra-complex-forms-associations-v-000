<h1>Update Owner</h1>

<form action="/owners/<%= @owner.id %>" method="POST">
  <p>
    <label>Name:</label>
    <input type="text" name="owner[name]" value="<%= @owner.name %>">
  </p>

  <p>Select your pets</p>

  <p>
    <% @pets.each do |pet| %>
      <input type="checkbox" name="owner[pet_ids][]" value="<%=pet.id%>" id="<%=pet.id%>" <%= 'checked' if @owner.pets.include?(pet) %>>
        <%= pet.name %>
      </input>
    <% end %>
  </p>

  <p>and/or, create a new pet:</p>

  <p>
    <label>name:</label>
    <input  type="text" name="pet[name]"></input>
  </p>
  
  <input type="submit" value="Update Owner">
</form>