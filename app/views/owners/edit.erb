<h1>Update Owner</h1>

<form class="" action="/owners/<%=@owner.id%>" method="post">
  <label>Name:</label>
  <br></br>
  <input type="text" name="owner[name]" id="owner_name" value="<%=@owner.name%>">
  <br></br>
  <label>Choose an existing pet:</label>
  <br></br>
  <%Pet.all.each do |pet|%>
    <input type="checkbox" name="owner[pet_ids][]" id="<%=pet.id%>" value="<%=pet.id%>" <%='checked' if @owner.pets.include?(pet) %>><%=pet.name%></input>
  <%end%>
  <br></br>
  <label for="">and/or, create a new pet:</label>
  <br></br>
  <label for="">name:</label>
    <input type="text" name="pet[name]" id="pet_name" value=""></input>
    <br></br>
  <input type="submit" name="submit" value="Update Owner">
</form>
