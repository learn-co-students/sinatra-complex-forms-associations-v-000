<h1>Update Owner</h1>

<form action="/owners/<%= @owner.id %>" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="owner[name]">

  <br></br>

  <% @pets.each do |pet| %>
    <input type="checkbox" name="owner[pet_ids][]" value="<%= pet.id %>" id="<%= pet.id %>" <%= "checked" if @owner.pets.include?(pet) %>><label for="<%= pet.id %>"><%= pet.name %></label>
  <% end %>

  <p>and/or, create a new pet:</p>
  <p><label for="new_pet">name: </label><input type="text" name="pet[name]" id="new_pet"></p>

  <input type="submit" value="Update Owner">
</form>
