<h1>Update Owner</h1>

<form action="<%="/owners/#{@owner.id}"%>" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="owner[name]" value="<%=@owner.name%>" id="owner_name">

  <br></br>

<% @pets.each do |pet| %>
<%= pet.name %> <input type='checkbox' name='owner[pet_ids][]' id="<%=pet.id%>" value="<%= pet.id %>"  <%='checked' if @owner.pets.include?(pet) %>>
  <% end %>
 Pet: <input type='text' name='pet[name]' id="pet_name">

  <input type="submit" value="Update Owner">
</form>

