<h1>Update Owner</h1>

<form action="/owners/<%= @owner.id %>" method="POST">
  <label>Name:</label>
  
  <br></br>
  
  <input type="text" name="owner[name]" value="<%= @owner.name %>">
  
  <br></br>

  <label>Pets:</label>
  <br><br>
  <% Pet.all.each do |pet| %>
    <% if @owner.pets.include?(pet) %>
      <input type="checkbox" name="owner[pet_ids][]" value="<%= pet.id %>" id="<%= pet.id %>" checked>
        <%= pet.name %>
      </input>
    <% else %>
      <input type="checkbox" name="owner[pet_ids][]" value="<%= pet.id %>" id="<%= pet.id %>">
        <%= pet.name %>
      </input>
    <% end %>
  <% end %>
  <br><br>

  <label>Create a New Pet</label>
  <br><br>
  <input type="text" name="pet[name]">
  <br><br>

  <input type="submit" value="Update Owner">
</form>