
<h1>Update Owner</h1>

<form action="/owners/<%= @owner.id %>" method="POST">
  <label>Name:</label>
  <br>
  <input type="text" name="owner[name]" value="<%= @owner.name %>">
  <br>
  <label>Existing Pets:</label>
  <% Pet.all.each do |pet| %>
    <label><input type="checkbox" name="owner[pet_ids][]" value="<%= pet.id %>" id="<%= pet.id %>" <%='checked' if @owner.pets.include?(pet) %>><%=pet.name %></label>
  <% end %>
  <br>
  <label>New Pet:</label>
  <input type="text" name="pet[name]">

  <input type="submit" value="Update Owner">
</form>