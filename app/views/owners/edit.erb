<h1>Update Owner</h1>

<form action="/owners/<%=@owner.id%>" method="POST">
  <label for="owner_name">Name:</label><br></br>
  <input id="owner_name" type="text" name="owner[name]" value="<%=@owner.name%>">
  <br></br>
  <label>Choose an existing pet:</label>
  <br></br>

  <% Pet.all.each do |pet| %>
  <input type="checkbox" name="owner[pet_ids][]" value="<%=pet.id%>" id="<%=pet.id%>"
  <%= 'checked' if @owner.pets.include?(pet) %>><%=pet.name%></input>
  <br></br>
    <%end%>
  <br></br>
  <label>or, create a new pet:</label>
  <br></br>
  <input type="text" id="pet_name" name="pet[name]"></input>
  <br></br>
  <input type="submit" value="Update Owner">
</form>
