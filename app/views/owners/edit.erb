<h1>Update Owner</h1>

<form class="form" action="/owners/<%=@owner.id%>" method="post">
  <label>Name: </label>

  <br></br>

  <input type="text" name="owner[name]" id="owner_name" value="<%=@owner.name%>">

  <br></br>

  <label>Choose an existing pet: </label><br>
  <% @pets.all.each do |pet| %>
    <input type="checkbox" name="owner[pet_ids][]" id="<%=pet.id%>" value="<%=pet.id%>" <%='checked' if @owner.pets.include?(pet) %>>
    <%=pet.name%>
    <br>
  <%end%>
  <br>
  <label>and if you would like to add a new pet:
  <br></br>
  </label>
  <label>Name:</label>
  <input type="text" name="pet[name]" id="pet[name]">
  <br></br>
  <input type="submit" value="Update Owner">
</form>
