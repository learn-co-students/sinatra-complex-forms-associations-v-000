<h1>Update Owner</h1>

<form action="/owners/<%=@owner.id%>" method="post">
  <label for="owner_name">Name: </label>

  <input type="text" name="owner[name]" value="<%=@owner.name%>" id="owner_name">

  <br><br>

  <label for="existing">Choose an existing pet:</label>

  <%Pet.all.each do |pet| %>
    <input type="checkbox" name="owner[pet_ids][]" value="<%=pet.id%>" id="<%=pet.id%>" <%='checked' if @owner.pets.include?(pet) %>><%=pet.name%>
  <%end%>

  <br><br>

  <label for="new_pet">and/or, create a new pet:</label>

  <br><br>

  <label for="pet_name">Name: </label>
  <input type="text" name="pet[name]" id="pet_name">

  <br><br>
  <input type="submit" value="Update Owner">
</form>
