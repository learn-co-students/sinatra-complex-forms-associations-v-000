<h1>Update Owner</h1>

<form class="" action="/owners/<%=@owner.id%>" method="post">
  <label>Name:</label>
  <br>
  <input type="text" name="owner[name]" value="<%=@owner.name%>" id="owner_name">
  <br>
  <label>Choose an existing pet:</label>
  <br>
  <%Pet.all.each do |pet|%>
    <input type="checkbox" name="owner[pet_ids][]" value="<%=pet.id%>" id="<%=pet.id%>" <%='checked' if @owner.pets.include?(pet) %>><%=pet.name%></input>
  <%end%>
  <br>
  <label>and/or, create anew pet:</label>
  <br>
  <label>Name:</label>
  <input type="text" name="pet[name]" id="pet_name">
  <br>
  <input type="submit" value="Update Owner">
</form>
