<h1>Update Owner</h1>

<form action="/owners/<%= @owner.id %>" method="post">
  <label for="owner_name">Name:</label></br>
  <input id="owner_name" type="text" name="owner[name]" value="<%= @owner.name %>"></br>

  <label>Choose an existing pet:</label></br>
  <% Pet.all.each do |pet| %>
    <input id="<%= pet.id %>" type="checkbox" name="owner[pet_ids][]" value="<%= pet.id %>" <%= 'checked' if @owner.pets.include?(pet) %>>
      <%= pet.name %>
    </input>
  <% end %>

  </br>

  <label for="pet_name">and/or, create a new pet:</label></br>
  <input id="pet_name" type="text" name="pet[name]"></br>

  <input type="submit" value="Update Owner">
</form>
