<h1>Update Owner</h1>
<form action="/owners/<%=@owner.id%>" method="POST">
  <label>Name:</label>
  
  <br></br>
  
  <input type="text" name="owner[name]" value="<%=@owner.name%>">
  
  <br></br>
  <p>Choose an existing pet:</p>
  <%@pets.each do |p|%>
    <label for="<%=p.id%>"><%= p.name%></label>
    <input type="checkbox" name="owner[pet_ids][]" value="<%= p.id%>" id="<%=p.id%>"
        <%= 'checked' if @owner.pets.include?(p)%>>
  <%end%>
  <br></br>
  <label>and/or create a new pet:</label>
  <br></br>
  <label for="pet_name">Name:</label>
  <input type="text" name="pet[name]" id="pet_name">
  <br></br>
  <input type="submit" value="Update Owner">
</form>
