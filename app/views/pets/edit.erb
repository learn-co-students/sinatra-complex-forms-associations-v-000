<h1>Update Pet</h1>
<form action="/pets/<%=@pet.id%>" method="post">
	<input type="hidden" name="_method" value="patch">
	
	<p>Pet name: <label for="pet_name"><input type="text" name="pet[name]" value="<%=@pet.name%>" id="pet_name"></label></p>
	<%@owners.each do |owner|%>
		<label for="<%=owner.id%>">
			<input type="radio" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if @pet.owner == owner%>><%=owner.name%></input>
		</label>
	<%end%>
	<br>
	<label>and/or, create a new owner:</label>
	<br>
	<label for="owner_name">Name: 
		<input type="text" name="owner[name]" id="owner_name">
	</label>
	<input type="submit"value="Update Pet">

</form>

