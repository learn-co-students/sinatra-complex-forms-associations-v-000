<h1>Update Pet</h1>
<form  action="/pets/<%=@pet.id%>" method="post">
<label>Name:</label>
<input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>"><br><br>

<label>Owners</label>
<%Owner.all.each do |owner|%>
<input type="checkbox" name="pet[owner_id]"  value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if @pet.owner == owner%>><%=owner.name%> </input>
<%end%>
<br>

<label>And/Or Create a New Owner</label>
Name: <input type="text" name="owner[name]" id="owner_name"><br>
<input type="submit" value="Update Pet">
</form>
