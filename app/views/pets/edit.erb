<h1>Update Pet</h1>
<form action="/pets/<%= @pet.id %>" method="POST">
  <label>Name:</label>

  <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>"></input>

  <br></br>

  <label>Select An Owner:</label>
  <%Owner.all.each do |owner|%>
    <input type="radio" name="owner[name]" id="<%= owner.id %>" value="<%= owner.name %>"
    <%= 'checked' if owner.id == @owner.id %>>
     <%= owner.name %>
  <%end%>

  <label>and/or, create a new owner:</label>
  <br></br>
  <label>name:</label>
    <input  type="text" name="owner[new_owner]" id="owner_name"></input>
  <br></br>

  <br></br>
  <input type="submit" value="Update Pet">
</form>
