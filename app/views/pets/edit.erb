<h1>Update Pet</h1>


<form method="post" action="/pets/<%=@pet.id%>">

  <label>Name: </label>

    <input type="text" name='pet[name]' id="pet_name" value="<%=@pet.name%>">

  <label>Choose an existing owner:</label>

    <% Owner.all.each do |owner| %>
    <input type="checkbox" name="pet[owner_id]" value="<%= owner.id %>" id="<%= owner.id %>" <%='checked' if @pet.owner %>> <%= owner.name %></input>
    <% end %>
   

  <br>  </br>

  <label> or, create a new owner: </label>
<label>name: </label>
  
  <input type="text" name="owner[name]" id="owner_name"></input>

  <input type="submit" value="Update Pet" ></input>





