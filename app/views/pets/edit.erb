<h1>Update Pet</h1>


<form action="/pets/<%=@pet.id%>" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">

  <br></br>

  <% Owner.all.each do |owner| %>
  <input type="radio" name="pet[owner_id]" id="<%=owner.id%>" value="<%= owner.id %> "<%='checked' if @pet.owner.name.include?(owner.name)%>><%= owner.name %></input>
  <% end %>

<input type="text" name="owner[name]" id="owner_name" value="">


  <input type="submit" value="Update Pet">
</form>
