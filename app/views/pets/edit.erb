<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="post">
  <label for="pet_name">Name: </label>

  <input type="text" name="pet[name]" value="<%=@pet.name%>" id="pet_name">

  <br><br>

  <label for="existing">Choose an existing owner:</label>

  <%Owner.all.each do |owner| %>
    <input type="radio" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if @pet.owner == owner %>><%=owner.name%>
  <%end%>

  <br><br>

  <label for="new_owner">and/or, create a new owner:</label>

  <br><br>

  <label for="owner_name">Name: </label>
  <input type="text" name="owner[name]" id="owner_name">

  <br><br>
  <input type="submit" value="Update Pet">
</form>
