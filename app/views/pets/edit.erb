<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="post">
  <label for="pet_name">Name:</label>

  <br>

  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">

  <br>

  <label for="owner_name">Choose an existing owner:</label>

  <br>

  <%Owner.all.each do |owner|%>
  <input type="checkbox" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>" <%='checked' if @pet.owner_id == owner.id%>><%=owner.name%></input>
  <%end%>

  <br>

  <label>or create a new owner:</label>
  <br>
  <label for="owner_name">name:</label>
  <input type="text" name="owner[name]" id="owner_name">
  <br>
  <input type="submit" value="Update Pet">
</form>