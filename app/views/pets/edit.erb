<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
  <input type="hidden" name="_method" id="hidden" value="PATCH">
  <label>Name:</label><br>
  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>"><br>
  <br>

  <label>Choose an existing owner:</label><br>
  <%@owners.each do |owner|%>
    <input type="radio" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>" <%=@pet.owner == owner ? 'checked' : ''%>>
    <%=owner.name%></input>
  <%end%>
  <br>

  <label>Create a new owner:</label><br>
  <br>
  <label>Name:</label><br>
  <input type="text" name="owner[name]" id="owner_name"><br>
  <br>


  <input type="submit" value="Update Pet">
</form>
