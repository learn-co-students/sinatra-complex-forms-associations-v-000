
<h1>Update Pet</h1>


<form action="/pets" method="POST">
  <label>Name:</label>
  
  <br></br>
  
  <input type="text" name="pet[name]" id="pet_name">
  
  <br></br>

  <label>Choose an existing owner:</label>

  <br></br>

  <%@owners.each do |owner|%>
    <input type="checkbox" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>" <%= 'checked' if @pet.owner_id == owner.id %>><%=owner.name%></input>
  <%end%>

  <br></br>
  
  <label>and/or, create a new owner:</label>

  <br></br>
  
  <label>name:</label>
  <input  type="text" name="owner[name]" id="owner_name"></input>
  
  <br></br>
  
  <input type="submit" value="Update Pet" id="submit">
</form>

