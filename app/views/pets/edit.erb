<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="POST">
  <p><label>Name:</label><input type="text" id="pet_name" name="pet[name]" value="<%= @pet.name %>"></p>
  <strong>Choose an existing user:</strong>
  <p>
    <% Owner.all.each do |owner| %>
      <input type="checkbox" name="pet[owner_id]" id="<%= owner.id %>"  value="<%= owner.id %>" <%= "checked" if @pet.owner == owner%>><%= owner.name %>
    <% end %>
  </p>
  <strong>and/or create a new Owner:</strong>
  <p><input type="text" name="owner[name]" id="owner_name"></p>

  <input type="submit" value="Update Pet">
</form>