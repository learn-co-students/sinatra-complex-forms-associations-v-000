<h1>Update Pet</h1>

<form method="POST" action="/pets/<%= @pet.id %>">
  
  <label>Name:</label>
  
  <br></br>

  <input id="pet_name" type="text" value="<%= @pet.name %>" name="pet[name]"></input>

  <br></br>

  <label>Choose an existing owner:</label>

  <br></br>

  <% @owners.each do |owner| %>
    <input type="radio" name="pet[owner_id]" value="<%= owner.id %>" id="<%= owner.id %>" <%= 'checked' if @pet.owner == owner %>><%= owner.name %></input>
  <% end %>

  <br></br>
  
  <label>and/or create a new owner:</label>
  
  <br></br>

  <label>Name:</label>
  <input id="owner_name" type="text" name="owner[name]"></input>

  <br></br>

  <input type="submit" value="Update Pet"></input>

</form>

