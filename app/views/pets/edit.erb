<h1>Update Pet</h1>


<form action="/pets/<%=@pet.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  
  <label>Pet Name:</label>
 
  <br>
  
  <input type="text", name="pet[name]" id="pet_name" value="<%=@pet.name%>"></input>
  
  <br>
  
   <label>Choose an existing owner:</label>
  
  <br>
  
   <% @owners.each do |owner|%>
   
  <input type="radio" name="pet[owner_id][]" id="<%=owner.id%>" 
  value="<%=owner.id%>" 
  <%='checked' if @pet.owner == owner %>>
  <%=owner.name%></input>
  <%end%>
  
  <br>
  
  <label>Register New Owner:</label>
  
  <br>
  
  <label>Name:</label>
  <input type="text" name="owner[name]" id="owner_name"></input>
  
  <br>
 
  <input type="submit" value="Update Pet">
  

  </form>