<h1>Update Pet</h1>

<h2>Edits for <%= @pet.name %></h2>

  <form action="/pets/<%= @pet.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Edit the Pet's Name:</label>
    <br>
    <input type="text" name="pet[name]" value="<%= @pet.name %>" id="pet_name">

    <br>
    <p>Select an existing owner or create a new one below.</p>


    <h3>Existing Owners</h3>
    <% Owner.all.each do |owner| %>
      <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%='checked' if @pet.owner.name == owner.name %>><%= owner.name %></input><br>
    <% end %>
    <br>

    <h3>New Owner</h3>
    <label>Owner Name: </label>
    <br>
    <input type="text" name="owner[name]" id="owner_name"></input>
    <br><br>

    <input type="submit" value="Update Pet">
  </form>
