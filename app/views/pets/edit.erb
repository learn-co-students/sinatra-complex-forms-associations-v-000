<h1>Update Pet</h1>

<form action="/pets/:id" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet_name">

  <label>Choose an existing owner:</label>

  <%Owner.all.each do |owner|%>
      <input type="checkbox" name="owner[id]" id="<%=owner.id%>" value="<%=owner.id%>" <%='checked' if @pet.owner_id == owner.id%>><%=owner.name%></input>
  <%end%>

  <br></br>

  <label>and/or, create a new owner:</label>
      <br></br>
      <label>name:</label>
        <input  type="text" name="owner[name]"></input>
      <br></br>

  <input type="submit" value="Update Pet">
</form>
