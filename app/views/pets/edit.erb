<h1>Update Pet</h1>


<form method="POST" action="/pets/<%= @pet.id %>" >
  <label>Name:</label>

  <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>">

  <br></br>

  <label>Choose an existing pet:</label>

  <br></br>

  <% Owner.all.each do |owner| %>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%='checked' if @pet.owner_id == owner.id %>><%= owner.name %></input>
  <% end %>

  <br></br>

  <label>and/or, create a new owner:</label>
  <br></br>
  <label>name:</label>
    <input  type="text" name="owner[name]" id="owner_name"></input>
  <br></br>
<input type="submit" value="Update Pet">
</form>