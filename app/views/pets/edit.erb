<h1>Update Pet</h1>

<!-- You made it.  Here is your Pet: <%= @pet.name %>. -->

<form action="/pets/<%=@pet.id%>" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">

  <br></br>

  <label>Choose an existing owner:</label>

  <br></br>

  <%Owner.all.each do |owner|%>
    <!-- TN: type below has to be radio, not checkbox, b/c radio only allows you to select one! -->
    <input type="radio" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>" <%='checked' if @pet.owner == owner %>><%=owner.name%></input>
  <%end%>

  <br></br>

  and/or, create a new owner:
  <br></br>
  <label for "owner_name">name:</label>
    <input id="owner_name" type="text" name="owner[name]"></input>
  <br></br>

  <input type="submit" value="Update Pet">
</form>
