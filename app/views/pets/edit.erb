<h1>Update Pet</h1>



 
<form action="/pets/<%=@pets.id%>" method="POST">
  <label>Name:</label>
 
  <br></br>
 
  <input type="text" name="pet[name]" id="pet_name" value="<%=@pets.name%>" <%= 'checked'  if  @pets["owner_id"]   %>>
 
  <br></br>
 
  <label>Choose an existing pet:</label>
 
  <br></br>
 
  
  <%Owner.all.each do |owner|%>
    <input type="checkbox" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>"><%=owner.name%></input>
  <%end%>
 
  <br></br>
 
  <label>and/or, create a new pet:</label>
  <br></br>
  <label>name:</label>

  <br></br>
  <input type="submit" value="Update Owner">
</form>