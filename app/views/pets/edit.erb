<h1>Update Pet</h1>
<form method="POST" action="/pets/<%=@pet.id%>">
<input type="text" name="pet[name]" value="<%=@pet.name%>" id="pet_name">

<br></br>

<label>Choose the owner</label>
<%Owner.all.each do |owner|%>
  <input type="radio" name="pet[owner_id]"
  value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if @pet.owner.name == owner.name %>><%=owner.name%></input>
<%end%>

<br></br>

<label>Or create a new owner!</label>
<br></br>
  <label>Name: </label>
    <input type="text" name="owner[name]" id="owner_name"></input>
<br></br>

<input type="submit" value="Update Pet">
</form>
