<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id %>" method="post">
  <label>Name:</label>

  <br><br>

  <input type="text" name="pet[name]" id="pet_name" placeholder="<%= @pet.name %>">
  <br><br>
  <% Owner.all.each do |owner| %>

    <input type="radio" name="pet[owner_id]" value="<%= owner.id %>" id="<%= owner.id  %>" <%= 'checked' if @pet.owner.name.include?(owner.name) %>> <%= owner.name %> </input>

  <% end %>
  <br><br>

  Create a new owner
  <br><br>

  <label>Name: </label>
  <input type="text" name="owner[name]" id="owner_name">

  <br><br>
  <input type="submit" value="Update Pet">
</form>
