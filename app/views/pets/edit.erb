<h1>Update Pet</h1>

<form method="post" action="/pets/<%= @pet.id %>">
  <label for="pet[name]">Pet Name: </label>
  <input type="text" id="pet_name" name="pet[name]" value="<%= @pet.name %>">
  <br><br>

  <label>Transfer to another owner: </label>
  <% Owner.all.each do |owner| %>
    <input type="checkbox" id="<%= owner.id %>" value="<%= owner.id %>" name="pet[owner_id]" <%= 'checked' if @pet.owner == owner %>><%= owner.name %></input>
  <% end %>
  <br><br>

  <label for="owner[name]">Or to a new owner: </label>
  <input type="text" id="owner_name" name="owner[name]">
  <br><br>

  <input type="submit" value="Update Pet">
</form>
