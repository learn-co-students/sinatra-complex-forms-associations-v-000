<h1>Update Pet</h1>


<form action="/pets/<%=@pet.id%>" method="post">
  <label>Pet Name:</label>
  <input type="text" name="pet[name]" value="<%=@pet.name%>" id="pet_name">
  <br>
  <label>Belongs to an existing Owner?:</label>
  <ul>
    <%Owner.all.each do |owner|%>
    <li><input type="radio" id="<%=owner.id%>" name="pet[owner_id]" value="<%=owner.id%>"  <%='checked' if @pet.owner == owner %>><%=owner.name%></li>
    <%end%>
  </ul>

  <label>Create new owner:</label>
  <br>
  <label>Owner Name:</label>
  <input type="text" name="owner[name]" id="owner_name"></input>
  <br>
  <input type="submit" value="Update Pet">
</form>
