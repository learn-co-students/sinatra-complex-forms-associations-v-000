<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <label>Name:</label>

  <br>

  <input type="text" name="pet_name" id="pet_name">

  <br>

  <label>Choose an existing owner:</label>

  <br>

  <% @owners.each do |owner| %>
    <p><input type="radio" name="owner[name]" value="<%= owner.id %>" id="<%= owner.id %>" <%='checked' if @pet.owner.id == owner.id %>><%= owner.name %></p>
  <% end %>

  <br>

  <label>and/or, create a new owner:</label>
  <br>
  <br>
  <label>name:</label>
  <br>
  <input type="text" name="owner_name">

  <br>
  <br>

  <input type="submit" value="Update Pet">
</form>
