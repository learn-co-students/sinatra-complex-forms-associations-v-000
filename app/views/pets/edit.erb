<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <label>Name: </label>

  <br>

  <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>">

  <br>

  <p>Choose an existing owner:</p> <!-- Create checkboxes for existing owners -->
  <% @owners.each do |owner| %>
    <input type="radio" name="pet[owner_id]" value="<%= owner.id %>" id="<%= owner.id %>" <%= 'checked' if owner == @pet.owner %>><%= owner.name %></input>
  <% end %>
  <br>
  <br>
  <label>name:</label>
  <input type="text" name="owner[name]" id="owner_name"/>
  <br>
  <input type="submit" value="Update Pet">
</form>
