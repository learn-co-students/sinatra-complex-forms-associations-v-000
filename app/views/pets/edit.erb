<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="POST">
<input type="hidden" id="hidden" name="_method" value="PATCH">

<label for="pet_name">Edit Pet's Name</label>
<input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>">
<br>

<p>Select an existing owner or create a new one.</p>

<label for="owner_name">Exising Owners</label>
<% @owners.each do |owner| %>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%= 'checked' if @pet.owner == owner %>><%= owner.name %>
<% end %>

<h2>New Owner</h2>
<label for="owner_name">Owner Name</label>
<input type="text" name="owner[name]" id="owner_name">
<br>

<button type="submit">Update Pet</button>

</form>

