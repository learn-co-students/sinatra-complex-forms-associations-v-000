<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
  <label>Name:</label>

  <br>

  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">

  <br>

  <label>Choose an existing owner:</label>

  <br>

  <%Owner.all.each do |owner|%>
      <input type="radio" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if @pet.owner.name.include?(owner.name) %>><%=owner.name%>
  <%end%>

  <br>

  <label>and/or, create a new owner:</label>
  <br>
  <label>name:</label>
  <input  type="text" name="owner[name]" id="owner_name">
  <br>
  <input type="submit" value="Update Pet">
</form>