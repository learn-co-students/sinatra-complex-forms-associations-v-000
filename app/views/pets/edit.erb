<h1>Update Pet</h1>

<form method="post" action="/pets/<%=@pet.id%>" >
    <label> Name: </label>
        <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>"></input>


    <br></br>
    <label>Owners name</label>
    <br></br>
    <%Owner.all.each do |owner|%> 
        <input type= "radio" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>" <%= 'checked' if @pet.owner.name == owner.name %> ><%=owner.name%></input>
    <%end%>
    <br></br>
     <label>Or create a new owner</label>
     <input type="text" name="owner[name]" id="owner_name"></input>
     <input type="submit" value="Update Pet">
</form>
