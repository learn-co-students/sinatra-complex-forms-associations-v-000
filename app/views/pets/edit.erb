<h1>Update Pet</h1>
<form method="post" action="/pets/<%= @pet.id%>">
	<label>Name:</label>

	<br>

	  <input type="text" name="pet[name]" placeholder="<%= @pet.name %>" value="" value="<%=@pet.name%>" id="pet_name">

	<br>

	<label>Choos an exsiting owner:</label>

	<br>

	<%Owner.all.each do |owner|%>
	  <input type="checkbox" name="pet[owner_id]" id="<%= owner.id%>" value="<%=owner.id%>" <%= 'checked' if @pet.owner == owner%> ><%= owner.name%></input>
	<% end %>

	<br>

	<label>or, create new owner</label>
	<br>
      <label>Name:</label>
      <input type="text" id="owner_name" name="owner[name]">
    <br>  
     
	<input type="submit" value="Update Pet">
</form>

