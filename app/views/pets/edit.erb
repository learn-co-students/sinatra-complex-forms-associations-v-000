<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
  <!--<input id="hidden" type="hidden" name="_method" value="patch">-->
  <label>Pet Name:</label><input type="text" id="pet_name" name="pet[name]" value="<%=@pet.name%>"><br></br>
  <label>Choose an existing owner:</label>
    <% Owner.all.each do |owner| %>
      <input type="radio" id="<%=owner.id%>" name="pet[owner_id]" value="<%=owner.id%>" <%='checked' if @pet.owner.id == owner.id %>>
      <%=owner.name%>
      </input>
    <% end %><br></br>
  <label>Create a new Owner Name:</label><input  type="text" id="owner_name" name="owner[name]" ></input>
  <br></br>
  <input type="submit" value="Update Pet">
</form>
