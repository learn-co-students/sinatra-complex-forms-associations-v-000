<h1>Update Pet</h1>

<form action="/pets/<%@pet.id%>" method="POST">
  <label>Name:</label>
  
  <br></br>
  
  <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name%>">
  
  <br></br>
  

 <label>Choose your owner:</label>
	<% Owner.all.each do |owner|%>
	    <input 
	    	type="radio" 
	    	name="pet[owner_ids]" 
	    	id="<%=owner.id%>" 
	    	value="<%= owner.id%>" >
	    	<%='checked' if @pet.owner.name == owner.name %>><%=owner.name%>
	    	</input>

	<%end%>


<label>and/or, create a new owner:</label>
	    <br></br>

	    <label>name:</label>
	      <input  type="text" name="owner[name]"></input>
	    <br></br>

	  <input type="submit" value="Create Pet">
</form>


