<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="post">
<h3>Change Pet's Name: <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>"></h3>
<h3>Choose or Create an Owner</h3>
<% @owners.each do |owner| %>
  <p><input type="radio" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>" <%='checked' if @pet.owner == owner%>> <%=owner.name%></p>
<% end %>
<p>New Owner's Name: <input id ="owner_name" type="text" name="owner[name]"></p>
<input type="submit" value="Update Pet">
</form>
