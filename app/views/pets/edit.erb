<h1>Update Pet</h1>

<form action=<%= "/pets/#{@pet.id}"%> method="POST">
    <input type="hidden" id="hidden" name="_method" value="PATCH">
    <label for="pet[name]">Name:</label>
    <input type="text" name="pet[name]" id="pet_name" value=<%= @pet.name %>><br>

    <p>Select an Owner:</p>
    <% @owners.each do |owner|%>
        <input type="radio" id=<%= "#{owner.id}"%> name="pet[owner_id]" value=<%= "#{owner.id}"%> <%= "checked" if owner.id == @pet.owner.id %>>
        <label for=<%= "#{owner.id}"%>><%=owner.name%></label>
        <br>
    <% end %>

    <p>Or create a new one:</p>
    <input type="text" name="owner[name]" id="owner_name">
    <input type="submit" value="Update Pet">
</form>
