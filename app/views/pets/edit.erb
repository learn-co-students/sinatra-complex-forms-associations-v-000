<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name:</label>
  <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>">
  <br></br>

  <label>Choose an existing owner:</label>
  <% @owners.each do |owner| %>
    <input type="radio" name="pet[owner_id]" value="<%= owner.id %>" id="<%= owner.id %>" <%='checked' if @pet.owner == owner %> ><%= owner.name %></input>
      <% end %>
  <br></br>

  <label>or, create a new owner:</label>
    <br></br>
    <label>name:</label>
    <input type="text" name="owner[name]" id="owner_name">

    <br></br>
  <input type="submit" value="Update Pet">
</form>
