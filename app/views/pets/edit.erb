<h1>Update Pet</h1>
<form method="POST" action="/pets/<%= @pet.id %>">
  <label>Name:</label>
  <input type="text"  id="pet_name" name="pet[name]" value="<%= @pet.name %>">
  <br></br>
  <label>Choose Owner:</label><br>
  <% Owner.all.each do |owner| %>
      <input type="checkbox" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if @pet.owner_id == owner.id %>><%=owner.name%></input><br/>
  <% end %>
  <p>OR</p>
  <label>Add New Owner</label>
  <input type="text" name="owner[name]" id="owner_name">
  <input type="submit" name="submit" value="Update Pet">

</form>
