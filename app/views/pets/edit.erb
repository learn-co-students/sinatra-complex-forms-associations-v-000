
<h1>Create a new Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
  <label>Name:</label>

  <br><br>

  <input type="type" name="pet[name]" id="pet_name">

  <br><br>

  <label>Choose an existing owner:</label>

  <br><br>

  <%Owner.all.each do |owner|%>
  <input type="radio" name="pet[owner_ids]" id="<%=owner.id%>" value="<%=owner.id%>" <%='checked' if @pet.owner == owner %>><%=owner.name%></input>
  <%end%>


  <br><br>

  <label>and/or, create a new owner:</label>
  <br><br>
  <label>name:</label>
    <input id="owner_name" type="text" name="owner[name]"></input>
  <br><br>
  <input id="Update Pet" type="submit" values="Create Pet">

</form>
