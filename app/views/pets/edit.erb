<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" id="pet_name"name="pet[name]" value="<%=@pet.name%>">

  <br></br>

  <label>Choose an existing owner:</label>

  <br></br>

  <% @owners.each do |owner| %>
    <input type="radio" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if @pet.owner.name == owner.name%>><%=owner.name%></input>
  <% end %>

  <br></br>

  <label>or create a new owner:</label>

  <br></br>

  <label>Name:</label>
  <input type="text" id="owner_name" name="owner[name]">

  <br></br>

  <input type="submit" value="Update Pet">
</form>
