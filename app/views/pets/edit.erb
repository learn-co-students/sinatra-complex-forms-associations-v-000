<h1>Update Pet</h1>

<form method="post" action="/pets/<%= @pet.id %>">
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet[name]" value="<%= @pet.name %>" id="pet_name"></input>

  <br></br>

  <label>Choose an existing owner:</label>

  <br></br>

  <% Owner.all.each do |owner| %>
    <input type="radio" name="pet[owner_id]" value="<%= owner.id %>"
    id="<%= owner.id %>" <%= 'checked' if @pet.owner == owner %>>
      <%= owner.name %>
    </input>
  <% end %>

  <br></br>

  <label>and/or create a new owner:</label>

  <br></br>
  <label>Owner name:</label>
    <input type="text" name="owner[name]" id="owner_name"></input>
  <br></br>

  <input type="submit" value="Update Pet">

</form>
