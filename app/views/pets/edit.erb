<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="post">
	<label for="pet_name">Name:</label>
	 <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>"><br>
	<label>Choose an existing owner:</label><br>
	<%Owner.all.each do |owner|%>
		<input type="radio" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>" <%='checked' if @pet.owner == owner%>><%=owner.name%></input>
	<%end%><br>
	<label>and/or, create a new owner:</label>
	<br>
	<label>Name:</label>
	<input type="text" name="owner[name]" id="owner_name">
	<br>
	<input type="submit" value="Update Pet">
</form>