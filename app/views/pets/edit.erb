<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="post">
  <label>Pet Name:</label>
  <input id="pet_name" type="text" name="pet[name]" value="<%=@pet.name%>">
  <br>

  <label>Choose an existing owner:</label>
  <br>

  <%@owners.each do |owner|%>
    <input id="<%=owner.id%>" type="radio" name="pet[owner_id]" value="<%=owner.id%>" <%='checked' if @pet.owner == owner%> ><%=owner.name%></input>
  <% end %>
  <br>

  <label>And/or, create a new owner:</label>
  <br>
  <label>Owner Name:</label>
  <input id="owner_name" type="text" name="owner[name]">
  <br>
  <br>
  <input type="submit" value="Update Pet">
</form>
