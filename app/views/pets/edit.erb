<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
	<label>Name:</label> <br>

	<input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>"> <br>

	<label>Choose and existing Owner:</label> <br>

	<%Owner.all.each do |owner|%>
		<input type="checkbox" name="pet[owner_id]" id="<%= owner.id%>" value="<%=owner.id%>" <%='checked' if @pet.owner == owner %>>
		<%=owner.name%>
		<%end%>
		<br>
		<label>and/or, create a new owner:</label> <br>
		<label>Name:</label>
		<input  type="text" name="owner[name]" id="owner_name"></input> <br>
		<input type="submit" value="Update Pet">
</form>
