<h1>Update Pet</h1>
<h1>Update Owner</h1>
 
<form action="/pets/<%=@pet.id%>" method="POST">
  <label>Name:</label>
 
  <br></br>
 
  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">
 
  <br></br>
 
  <label>Choose an existing pet:</label>
 
  <br></br>
 
  <%Owner.all.each do |owner|%>
    <input type="checkbox" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>" <%='checked' if @pet.owner == owner %>><%=owner.name%></input>
  <%end%>
 
  <br></br>
 
  <label>and/or, create a new Owner:</label>
  <br></br>
  <label>name:</label>
    <input  type="text" id="owner_name" name="owner[name]"></input>
  <br></br>


  <input type="submit" value="Update Pet">
</form>


