<h1>Update Pet</h1>

  <form action="/pets/<%=@pet.id%>" method="POST">
     <label>Name:</label>

     <input type="text" name="pet_name" value="<%=@pet.name%>">

     <br></br>

     <label>Choose an existing owner:</label>

     <br></br>

      <%@owners.each do |owner|%>
        <input type="radio" name="owner_id" value="<%=owner.id%>" id="<%=owner.id%>"<%='checked' if @pet.owner == owner%>><%=owner.name%>
      <%end%>

      <label>and/or, create a new owner:</label>

      <br></br>

      <label>name:</label>

        <input  type="text" name="owner[name]" id="owner_name">
      <br></br>

   <input type="submit" value="Update Pet">
</form>
