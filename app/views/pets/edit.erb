<h1>Update Pet</h1>
<form action='/pets/<%=@pet.id%>' method='post'>
  <label>Name:</label>
  <br>
  <input type='text' name='pet[name]' id='pet_name' value='<%=@pet.name%>'>
  <br>
  <label>Choose an existing owner:</label>
  <%Owner.all.each do |owner|%>
    <input type='radio' id='<%=owner.id%>' name='pet[owner_id]' value='<%=owner.id%>' <%='checked' if @pet.owner== owner %>><%=owner.name%></input>
  <%end%>
  <br>
  <label>Or create a new one:</label>
  <input type='text' id='owner_name' name='owner[name]'>

  <input type='submit' value='Update Pet'>
</form>

