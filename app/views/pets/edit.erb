<h1>Update Pet</h1>
<form action="/pets/<%= @pet.id %>" method="post">
  <label for="pet_name">Name: </label><br>
  <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>"><br>
  <% @owners.each do |owner| %>
    <input type="radio" id="<%= owner.id %>" name="pet[owner_id]" value="<%= owner.id %>" <%= 'checked' if @pet.owner == owner %>>
      <%= owner.name %>
    </input>
  <% end %><br>
  <label for="owner_name">New Owner: </label><br>
  <input type="text" name="owner[name]" id="owner_name"><br>
  <input type="submit" name="submit" value="Update Pet">
</form>
