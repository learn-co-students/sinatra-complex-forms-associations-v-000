<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="POST" accept-charset="utf-8">

  <label>Name:</label> <br>

  <br>

  <input type="text" value="<%= @pet.name %>" name="pet[name]" id="pet_name"/> <br>

  <br>

  <label>Choose an existing owner:</label> <br>

  <br>

  <% Owner.all.each do |owner| %>
    <input type="radio" value="<%= owner.id %>" name="pet[owner_id]" id="<%= owner.id %>" <%= 'checked' if @pet.owner == owner %>>
    <%= owner.name %>
    </input>
  <% end %> <br>

  <br>

  <label>and/or, create a new owner:</label> <br>

  <br>

  <label>name:</label>
  <input type="text" value="" name="owner[name]" id="owner_name"/> <br>

  <br>

  <input type="submit" value="Update Pet"> 

</form>



