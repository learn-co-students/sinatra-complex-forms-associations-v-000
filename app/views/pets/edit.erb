<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="pet_name">Pet Name:</label><br>
  <input type="text" name="pet_name" value="<%= @pet.name %>"><br><br>
  <label for="owner_id">Choose an existing owner:</label><br>
  <% @owners.each do |owner| %>
    <input id="<%= owner.id %>" type="checkbox" name="owner_id" value="<%= owner.id %>" <%='checked' if @pet.owner.include?(owner[name]) %>><%= owner.name %></input><br>
  <% end %><br>
  <label for="owner_name">And/or, create a new owner:</label><br>
  <input id="owner_name"  type="text" name="owner_name"><br><br>
  <input type="submit" value="Update Pet">
</form>