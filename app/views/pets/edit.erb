<h1>Update Pet</h1>
<form action="/pets/<%=@pet.id%>" method="post">
  <label for="">Name:</label>
  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>"><br>
  <label for="">Choose an existing owner: </label><br>
  <% Owner.all.each do |owner| %>
    <input type="radio" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>"
    <%='checked' if @pet.owner_id==owner.id%>><%= owner.name %></input><br>
  <% end %><br>
  <label for="">Or, create a new owner: </label><br>
  <label for="">Name: </label><br>
  <input type="text" name="owner[name]" id="owner_name" value=""><br>
  <input type="submit" value="Update Pet">
</form>
