<h1>Update Pet</h1>

<form method="POST" action="/pets/<%= @pet.id %>">
  <!-- <input id="hidden" type="hidden" name="_method" value="patch"/> -->
  <label>Name: </label>
  <input type="text" id="pet_name" name="pet[name]" value="<%= @pet.name %>"/>
  <br></br>

  <label>Choose an existing owner: </label>
  <% @owners.each do |owner| %>
    <input type="radio" id="<%= owner.id %>" name="pet[owner_id]" value="<%= owner.id %>" <%='checked' if @pet.owner.name == owner.name %>><%= owner.name %></input>
  <% end %>
  <br></br>

  <label>Or create a new owner: </label>
  <input type="text" id="owner_name" name="owner[name]"/>
  <br></br>

  <input type="submit" value="Update Pet"/>
</form>
