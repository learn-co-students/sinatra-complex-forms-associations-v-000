<h1>Update Pet</h1>

<form class="" action="/pets/<%= @pet.id %>" method="post">
  <label for="">Name:</label>

  <br></br>

  <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>">

  <br></br>

  <label for="">Choose an existing owner:</label>

  <br></br>

  <% Owner.all.each do |owner| %>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%= 'checked' if @pet.owner_id == owner.id %>><%= owner.name%>
  <% end %>

  <br></br>

  <label for="">and/or, create a new owner:</label>
  <br></br>
  <label for="">name:</label>
  <input type="text" name="owner[name]" id="owner_name" value="">
  <br></br>
  <input type="submit" value="Update Pet">
</form>
