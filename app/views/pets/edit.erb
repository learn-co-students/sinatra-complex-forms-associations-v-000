<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="post">

  <label for="pet_name">Name:</label>
  <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>"><br>

  <p><b>Choose an existing owner:</b></p><br>

  <% @owners.each do |owner| %>
    <input type="checkbox" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%= 'checked' if @pet.owner.name == owner.name %>><%= owner.name %></input>
  <% end %><br>

  <p><b>And/or, create a new owner:</b></p><br>

  <label for="owner_name">Name:</label>
  <input type="text" name="owner[name]" id="owner_name">

  <input type="submit" value="Update Pet">

</form>
