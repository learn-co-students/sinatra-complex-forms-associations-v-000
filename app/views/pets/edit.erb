<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="post">
  <label>Pet's Name:</label>
  <input type="text" name="pet[name]" value="<%= @pet.name %>" id="pet_name">
  <br>
  <% Owner.all.each do |owner| %>
    <input type="checkbox" name="owner_id" value="<%= owner.id %>" id="<%= owner.id %>" <%= 'checked' if owner.id == @pet.owner.id %>><%= owner.name %></input>
  <% end %>
  <br>
  <label>Or create an owner:</label>
  <input type="text" name="owner[name]" id="owner_name">
  <input type="submit" name="update" value="Update Pet">
</form>
