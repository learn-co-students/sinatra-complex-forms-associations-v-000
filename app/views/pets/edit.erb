<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="post">
	Pet:
  <br/><br/>
	<input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>"/>
	<br/><br/>
	Assign to New Owner:
  <br/><br/>
	<input type="text" name="owner[name]" id="owner_name" />
  <br/><br/>
  Or Select a Pre-Existing One:
  <br/><br/>
	<% Owner.all.each do |owner| %>
		<input type="radio" name="owners" value="<%= owner.id %>" id="<%= owner.id %>" <%= 'checked' if @pet.owner.id == owner.id %>> <%= owner.name %> </input>
	<% end %>
<br/><br/>
	<input type="submit" value="Update Pet" />

</form>
