<h1>Update Pet</h1>
<form action="/pets/<%= @pet.id%>" method="post">
  <p>
    <label for="name">Pet name:</label>
    <input type="text" name="pet_name" id="pet_name" value="<%= @pet.name %>">
  </p>

  <fieldset>
    <legend>Select Owner:</legend>
    <% @owners.each do |owner| %>
      <label for="<%= owner.id %>"><%= owner.name %></label>
      <input type="radio" name="owner_id" value="<%= owner.id %>" id="<%= owner.id %>" <%='checked' if @pet.owner.id == owner.id %>>
    <% end %>
  </fieldset>

  <p>Or create a new Owner below: <br>
    <label for="owner_name">Owner Name:</label>
    <input type="text" name="owner_name" id="owner_name" value="<%= @pet.owner.name %>">
  </p>
  <input type="hidden" name="_method" value="patch">
  <input type="submit" value="Update Pet">
</form>
