<h1>Update Pet</h1>

<form class="" action="/pets/<%= @pet.id %>" method="post">
  <label>Name:</label>
  <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>">
  <br>
  <label>Choose an existing owner:</label>
  <br>
  <%Owner.all.each do |owner|%>
    <input type="checkbox" name="pet[owner_id][]" id="<%= owner.id%>" value="<%=owner.id%>" <%='checked' if @pet.owner == owner%>><%= @pet.name%></input>
  <%end%>
  <br>
  <label>Or, create a new owner:</label>
  <label>Name:</label>
  <input type="text" name="owner[name]" id="owner_name">
  <input type="submit" value="Update Pet">
</form>
