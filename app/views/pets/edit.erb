<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="post">

<label for="pet_name">Name: </label>
<br></br>
<input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>">
<br></br>

<label>Choose an existing owner:</label>

<br></br>

<% if @owner = Owner.all %>
  <% @owner.each do |owner| %>
    <input type="radio" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>" <%= 'checked' if owner.id == @pet.owner_id %>><%= owner.name%></input>
  <% end %>
<% end %>

<br></br>

<label>and/or, create a new owner</label>
<br></br>
<label for="owner_name">Name: </label>
<input type="text" name="owner[name]" id="owner_name">

<br></br>

<button type="submit">Update Pet</button>

</form>
