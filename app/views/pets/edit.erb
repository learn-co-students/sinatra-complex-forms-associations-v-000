<h1>Update Pet</h1>
<h3> Here is the pet you selected: </h3>

<form method="post" action="/pets/<%=@pet.id%>">
<label>Pet name: </label>
<br></br>
  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">
  <br>
 <label> Owner name: </label>
 <br></br>
   <% Owner.all.each do |owner| %>
  <input type="checkbox" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%='checked' if @pet.owner.name == owner.name %>><%=owner.name%></input>
   <% end %>
   <br>
   <label> and/or create a new owner: </label>
   <input type="text" name="owner[name]" id="owner_name"></input>
   <br>
   <input type="submit" value="Update Pet">
</form>
