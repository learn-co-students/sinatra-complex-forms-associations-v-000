<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="post">
  <label for="pet_name">Name:</label>
  <input id="pet_name" type="text" name="pet[name]" value="<%=@pet.name%>"><br><br>

  <label>Choose an existing owner:</label>
  <%Owner.all.each do |owner|%>
    <input id="<%=owner.id%>" type="radio" name="pet[owner_id]" value="<%=owner.id%>" <%='checked' if @pet.owner_id == owner.id%>><%=owner.name%></input>
  <%end%><br><br>

  <label>or create a new owner:</label><br>
  <label for="owner_name">Name: </label>
  <input id="owner_name" type="text" name="owner[name]"><br><br>

  <input type="submit" value="Update Pet">
</form>
