<h1>Update Pet</h1>

<form class="" action="/pets/<%=@pet.id%>" method="post">
  <label>Name:</label>
  <br>
  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">
  <br>
  <%Owner.all.each do |owner|%>
    <input type="checkbox" id="<%=owner.id%>" name="pet[owner_id]" value="<%=owner.id%>" <%="checked" if @pet.owner_id == owner.id %>><%=owner.name%></input><br>
  <%end%>
  <h4>Or enter a new owner</h4>
  <input type="text" id="owner_name" name="owner[name]" value="">
  <input type="submit" name="submit" value="Update Pet">
</form>
