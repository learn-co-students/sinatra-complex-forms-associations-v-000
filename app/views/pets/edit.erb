<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="post">
  <label>Pet Name</label>
  <input type="text" id="pet_name" name="pet[name]" value="<%= @pet.name %>">
  <br></br>
  <h2>Existing Owners</h2>
  <% @owners.each do |owner| %>
    <input type="radio" id="<%= owner.id %>" name="pet[owner_id]"
     value="<%= owner.id %>" <%='checked' if @pet.owner==owner %>>
     <%= owner.name %></input>

    <br>
  <% end %>

  <br>
  <label for="owner_name">New Owner</label>
  <input type="text" name="owner[name]" id="owner_name">

  <br></br>
  <input type="submit" name="" value="Update Pet">
</form>
