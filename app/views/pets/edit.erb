<h1>Update Pet</h1>
<form class="" action="/pets/<%= @pet.id %>" method="post">
  <label>Name:</label>
  <br></br>
  <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>">
  <br></br>
  <label>Choose and existing owner:</label>
  <br></br>
  <% Owner.all.each do |owner| %>
    <input type="checkbox" name="pet[owner_id]" value="<%= owner.id %>" id="<%= owner.id %>"
    <%= 'checked' if owner.pets.include?(@pet) %>> <%= owner.name %>
  <% end %>
  <br></br>
  <label>or, create a new owner:</label>
  <br></br>
  <input type="text" name="owner[name]" id="owner_name" value="">
  <br></br>
  <input type="submit" value="Update Pet">
</form>
