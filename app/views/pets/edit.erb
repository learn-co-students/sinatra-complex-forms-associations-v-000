<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="POST">
	<label for="pet[name]">Name:</label>
	<input type="text" id="pet_name" name="pet[name]" value="<%= @pet.name %>">

	<br><br>

	<label>Choose an existing owner:</label>

	<br><br>

	<%@owners.all.each do |owner|%>
    	<input type="radio" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>" <%= @pet.id == owner.id ? 'checked' : nil %>><%=owner.name%></input>
  	<%end%>	
	
	<br><br>

	<label>and/or, create a new owner:</label>
    <br></br>

    <label>name:</label>
    <input type="text" id="owner_name" name="owner[name]">
    <br></br>	

	<input type="submit" value="Update Pet">
</form>