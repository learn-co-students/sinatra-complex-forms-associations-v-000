<h1>Update Pet</h1>


<form method='POST' action='/pets/<%=@pet.id%>'>
   <label>Name:</label>
   <br></br>
   <input type='text' name='pet[name]' value='<%=@pet.name%>' id='pet_name'></input>
   <br></br>
   <%Owner.all.each do |owner|%>
     <input type='checkbox' value='<%=owner.id%>' name='pet[owner_id]' id='<%=owner.id%>'
     <%='checked' if @pet.owner.name == owner.name%>><%=owner.name%></input>
   <%end%>
   <br></br>
   <input type='text' name='owner[name]' value='' id='owner_name'></input>
   <br></br>
   <input type='submit' value='Update Pet'>
 </form>