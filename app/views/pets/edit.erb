<h1>Update Pet</h1>
<form action="/pets/<%= @pet.id %>" method="POST">

  <input id="hidden" type="hidden" name="_method" value="patch">

  <label>Name:</label>

  <br>

  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">

  <br>

  <p>Choose an existing owner:</p>
  <%Owner.all.each do |owner|%>
    <input type="radio" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>" <%= 'checked' if @pet.owner.name == owner.name %>>
      <%=owner.name%>
    </input>
  <%end%>
  <br>

  <p>and/or, create a new owner</p>
  <label>Name:</label>
    <input type="text" name="owner[name]" id="owner_name">

  <br>

  <input type="submit" value="Update Pet">

</form>
