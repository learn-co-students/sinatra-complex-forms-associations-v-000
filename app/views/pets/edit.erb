<h1>Update Pet</h1>

<form action="/pets" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet[name]" value="<%=@pet.name%>">

  <br></br>
  <%@owners.each do |owner|%>
    <input type="radio" name="owner_id" value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if @pet.owner_id == owner.id %>><%=owner.name%></input>
  <%end%>
  <br></br>
  <label>or, create a new owner:</label>
    <br></br>
    <label>name:</label>
    <input  type="text" name="owner_name"></input>
  <br></br>
  <input type="submit" value="Update Pet">
</form>
