<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
  <input type="hidden" name="_method" value="patch">
  <label>Name:</label>
  <br>

  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">
  <br>

  <label>Choose an existing owner:</label>
  <br>

  <%Owner.all.each do |owner|%>
    <input type="radio" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.name%>" <%='checked' if @pet.owner.name == owner.name %>><%=owner.name%></input>
  <%end%>
  <br>

  <label>and/or, create a new owner:</label>
  <br>
  
  <label>name:</label>
    <input  type="text" name="owner[name]" id="owner_name"></input>
  <br>
  
  <input type="submit" value="Update Pet">
</form>

