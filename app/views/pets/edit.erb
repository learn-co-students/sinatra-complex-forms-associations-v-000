<h1>Update Pet</h1>
<form action="/pets/<%= @pet.id %>" method="post">
  <label>Name: </label> <input type='text' name="pet_name"> value="<%= @pet.name %>" id='pet_name' /><br />
  <label>Select from existing owners:</label><br />
  <% Owner.all.each do |owner| %>
    <% if owner.id == @pet.owner.id %>
      <input type='radio' name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" checked/> <%= owner.name %></inmput><br />
    <% else %>
      <input type='radio' name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" /> <%= owner.name %></inmput><br />
    <% end %>
  <% end %>
  <label>Or...create a new owner:</label><br />
  <input type='text' name="owner_name" id="owner[name]" /><br />
  <input type='submit' name="submit" id="submit" value="Update Pet" />


</form>


