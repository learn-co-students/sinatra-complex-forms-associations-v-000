<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
  <label>Name:</label>

  <br></br>

  <input id="pet_name" type="text" name="pet[name]" value="<%=@pet.name%>">

  <br></br>

  <label>Choose an existing owner:</label>

  <br></br>

  <%Owner.all.each do |owner|%>
    <input type="checkbox" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>" <%='checked' if @pet.owner.id == owner.id%>><%=owner.name%></input>
    <%end%>

  <label>or create a new owner:</label>

  <br></br>

  <label>name:</label>
    <input id="owner_name" type="text" name="owner[name]"></input>

    <br></br>
  <input type="submit" value="Update Pet">
</form>
