<h1>Update Pet</h1>

<form method="post" action="/pets/<%=@pet.id%>">

  <label>Name: <input type="text" name="pet[name]" id="pet_name"></label><br>
  
  <label>Create or select an owner:</label><br>
  <%Owner.all.each do |owner|%>
    <input type="checkbox" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if @pet.owner == owner %>><%=owner.name%><br>
  <%end%>
  
  <label>New owner name: <input type="text" name="owner[name]" id="owner_name"></label>
  <input type="submit" value="Update Pet">

</form>
