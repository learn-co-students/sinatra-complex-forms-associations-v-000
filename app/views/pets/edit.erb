<h1>Update Pet</h1>

<form method="POST" action="/pets/<%=@pet.id%>">
  <label>Name:</label>
  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">
  
  <br></br>
  
  <% Owner.all.each do |owner| %>
    <input type="checkbox" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>" <%='checked' if @pet.owner == owner %>><%=owner.name%></input>
  <% end %>
    <br></br>
    <label>or, create an owner from scratch:</label>
    <input type="text" name="owner[name]" id="owner_name"></input>
    <input type="submit" value="Update Pet">
s</form>