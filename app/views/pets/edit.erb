<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
<label>Pet Name:</label>

<br></br>
<input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">
<br></br>

<label>Existing Owners</label>
<br></br>
<%Owner.all.each do |owner|%>

<input type="checkbox" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>" <%='checked' if owner.id == @pet.owner.id%>><%=owner.name%></input>
<%end%>
<br></br>
<label>Create New Owner</label>
<input type = "text" name = "owner[name]" id="owner_name">
<br></br>
<input type="submit" value="Update Pet">
</form>