<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" id="pet[name]" name="pet_name" value="<%=@pet.name%>">

  <br></br>
  <label>Choose an existing owner:</label>

  <%Owner.all.each do |owner|%>
    <input type="radio" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if @pet.owner_id == owner.id %>><%=owner.name%></input>

  <%end%>

  <br></br>

  <label>and/or, create a new owner:</label>
    <br></br>
    <label>name:</label>
      <input  type="text" id=owner[name] name="owner_name"></input>
    <br></br>

  <input type="submit" value="Update Pet">
</form>
