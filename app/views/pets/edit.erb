<h1>Update Pet</h1>

<form class="" action="/pets/<%=@pet.id%>" method="post">
  <label> Name: </label>

  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">

  <br>

  <label> Choose an existing owner:</label>

  <br>

  <% Owner.all.each do |owner| %>

  <%= owner.name %>
  <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value=<%= owner.id %> <%='checked' if @pet.owner.id == owner.id %>>

  <% end %>

  <br>

  <label>and/or, create a new owner:</label>

  <br>

  <label for="owner_name"><input type="text" name="owner[name]" id="owner_name" value=""></label>

  <br>

  <input type="submit" id="submit" value="Update Pet">
</form>
