<h1>Update Pet</h1>

<form method="POST" action='/pets/<%=@pet.id%>'>
  <label>Name: <%=@pet.name%></label>

  <br></br>

  <input type='hidden' name='_method' value='patch'>
  <label for='pet_name'>Update Pet Name: </label>
  <input type='text' name='pet[name]' id='pet_name'>

  <br></br>

  <%@owners.each do |owner|%>
    <label><%=owner.name%></label>
    <input type="radio" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>" <%='checked' if @pet.owner == owner%>
  <%end%>

  <br></br>

  <label>Create Pet Owner: </label>
  <input type='text' name='owner[name]' id='owner_name'>

  <br></br>

  <input type='submit' value='Update Pet'>
</form>
