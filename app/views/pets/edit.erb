<h1>Update Pet</h1>

<form method="POST" action="/pets/<%= @pet.id %>">
  <label>Name:</label>
  <input type="text" name="pet[name]" id="pet_name" value="<% @pet.name %>">
  <% Owner.all.each do |owner| %>
    <input type="checkbox" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if @pet.owner == owner %>><%=owner.name%>>
  <% end %>

  <p>And/Or create a new owner:</p>

  <label>Owner Name:</label>
  <input type="text" name="owner[name]" id="owner_name">
  <input type="submit" value="Update Pet">

</form>
