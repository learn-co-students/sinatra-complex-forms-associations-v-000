<h1>Update Pet</h1>
<form action="/pets/<%= @pet.id %>" method="post">

  <label>Name:</label>
  <br></br>

  <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>"></input>
  <br></br>

  <label>Choose an existing owner:</label>
  <br></br>

  <% Owner.all.each do |o| %>

  <input  type="radio" name="pet[owner_id]" id="<%= o.id %>"  value="<%= o.id %>"<%= 'checked' if @pet.owner == o %>><%= o.name %></input>
  <% end %>
  <br></br>

  <label>and/or create new owner</label>
  <br></br>

  <label>Name</label>
  <input type="text" name="owner[name]" id="owner_name"></input>
  <br></br>

  <input type="submit" value="Update Pet"></input>

</form>
