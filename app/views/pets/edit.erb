<h1>Update Pet</h1>


<form action="/pets/<%= @pet.id %>" method=POST>

	<p>Pets Name: <input type="text" name="pet[name]" id="pet_name" value ="<%= @pet.name%>"></p>
	<p>Create Owner by name and assign it to this pet: <input type="text" name="owner[name]" id="owner_name"></p>
	<% Owner.all.each do |owner| %>
		<input type="checkbox" value="<%= owner.id %>" id="<%= owner.id %>" name="pet[owner_id]"
		<%= owner.id == @pet.owner_id ? "checked" : "" %>
		><%= owner.name %></input>
		<br>
	<% end %>
	<input type="submit" value="Update Pet">
</form>

