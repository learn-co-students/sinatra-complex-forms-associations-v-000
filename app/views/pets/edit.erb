<h1>Update Pet</h1>

<br></br>

  <form method='post' action='/pets/<%= @pet.id %>'>
    <label>Name:</label>

    <br></br>

    <input type='text' name="pet[name]" value='<%= @pet.name %>' id="pet_name" />

    <br></br>

    <label>Choose an existing owner:</label>

    <br></br>

    <% Owner.all.each do |owner| %>
    <input type='radio' name='pet[owner_id]' id='<%= owner.id %>' value='<%= owner.id %>' <%= 'checked = true' if @pet.owner.id == owner.id %>><%= owner.name %></input>
    <% end %>

    <br></br>

    <label>or, create a new owner:</label>

    <br></br>

    <label>Name:</label>

    <input type='text' name='owner[name]' id='owner_name' />

    <br></br>

    <input type='submit' value='Update Pet' />

  </form>
