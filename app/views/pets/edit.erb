<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="POST"
  <label>Name:</label>

  <br />

  <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>">

  <br />

  <label>Choose an existing owner:</label>

  <br />

  <% Owner.all.each do |t| %>
    <input type="radio" name="owner[id]" id="<%= t.id %>" value="<%= t.id %>" <%= 'checked' if @pet.owner == t %>><%= t.name %></input>
  <% end %>

  <br />

  <label>or, create a new owner:</label>
  <br></br>
  <label>name:</label>
    <input  type="text" name="owner[name]" id="owner_name"></input>
  <br></br>
  <input type="submit" value="Update Pet">
</form>
