<h1>Update Pet</h1>

<form method="post" action="/pets/<%=@pet.id%>">	
	<label>Name:</label>
	<br />
	<input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">

	<br />
	<%Owner.all.each do |owner|%>
	    <input type="radio" name="pet[owner_id]" id="<%= owner.id%>" value="<%=owner.id%>" <%='checked' if @pet.owner_id == owner.id %>><%=owner.name%></input>
	    <br />
  	<%end%>
  	<label>Owner Name:</label>
  	<input type="text" name="owner[name]" id="owner_name">
	<button type="submit">Update Pet</button>
</form>
