<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name:</label>

  <br>

  <input id="pet_name" type="text" name="pet_name">

  <br>

  <%@owners.each do |owner|%>
      <input type="radio" name="owner[name]" value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if owner.pets.include?(@pet)%>> <%=owner.name%></input>
  <%end%>

  <br>

  <label>and/or, create a new owner:</label>
      <br>
      <label>name:</label>
        <input  type="text" name="owner_name"></input>
      <br>

  <input type="submit" value="Update Pet">
</form>
