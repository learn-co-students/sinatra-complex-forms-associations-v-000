<h1>Update Pet</h1>
<!-- Send to the new pet id page the following... -->
<form action="/pets/<%= @pet.id %>" method="POST">

  <label for="pet_name">Change Name: </label>
  <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>">

  <br></br>

  <label>Choose an existing owner:</label>

  <!-- Iterate through all owners to assign a checkbox to -->
  <% @owners.each do |owner| %>
  <!-- Assign default option to owner of pet, by id  -->
    <input type="radio" name="pet[owner_id]" value="<%= owner.id %>" id="<%= owner.id %>" <%="checked" if @pet.owner == owner %>>
      <%= owner.name %>
    </input>
  <% end %>

  <br></br>

  <label>or, create a new owner:</label>
  <br></br>

  <input type="text" name="owner[name]" id="owner_name">

  <br></br>

  <input type="submit" value="Update Pet">
</form>
