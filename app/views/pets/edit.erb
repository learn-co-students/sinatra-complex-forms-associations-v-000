<h1>Update <%=@pet.name%></h1>

<br>

<form action="/pets/<%=@pet.id%>" method="POST">
  <input type="hidden" name="_method" value="PATCH" id="hidden">
  <label>Pet Name</label>
  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">
  
  <br>
  
  <label>Choose an existing owner:</label>
  <br>
  
  <%@owners.each do |owner|%>
    <input type="radio" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>" <%= 'checked' if @pet.owner.id == owner.id%>> <%=owner.name%>
  <%end%>
  
  <br>
  
  <label>Or create an owner for the pet</label>
  <br>
  
  <label>Owner Name:</label>
  <br>
  
  <input type="text" name="owner[name]" id="owner_name">
  
  <br>
  
  <input type="submit" value="Update Pet">
</form>



