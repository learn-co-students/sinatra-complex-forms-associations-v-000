<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">

  <br></br>

  <label>Select Owner for Pet:</label>
  <% Owner.all.each do |owner| %>
    <input type="checkbox" id="<%=owner.id%>" value="<%=owner.id%>" name="pet[owner_id]" <%='checked' if @pet.owner.name == owner.name %>><%=owner.name%></input>
  <% end %>

  <br></br>

    <label>and/or, create a new owner:</label>
    <br></br>
    <label>name:</label>
      <input type="text" name="owner[name]" id="owner_name">
    <br></br>
  <input type="submit" value="Update Pet">
</form>
