<h1>Update Pet</h1>
<form action='/pets/<%= @pet.id %>' method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">

    <label for="pet_name">Name</label>
    <input id="pet_name" type="text" name="pet[name]" value="<%=@pet.name%>">
    <br>

    <p>Choose an existing owner:</p>

    <%@owners.each do |owner|%>
        <label for="<%=owner.id%>">
        <input id="<%=owner.id%>"
               type="radio"
               name="owner[id]"
               value="<%=owner.id%>" <%='checked' if owner.pets.include?(@pet)%>>
               <%=owner.name%>
        </input>
    <%end%>
    <br>

    <p>or, create a new owner:</p>
    <label for="owner_name">Owner name:</label>
    <input id="owner_name" type="text" name="owner[name]">
    <br>
    <input type="submit" value="Update Pet">
</form>
