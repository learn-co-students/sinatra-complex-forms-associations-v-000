<h1>Update Pet</h1>
<form action="/pets/<%= @pet.id %>" method="post">
  <label for="name">Name:</label>
  <br><br>
  <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>">
  <br><br>
  <label for="choose">Choose an existing owner:</label>
  <br><br>
  <% Owner.all.each do |owner| %>
  <input type="checkbox" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%= 'checked' if @pet.owner.name == owner.name %>><%= owner.name %>
  </input>
  <% end %>
  <br><br>
  <label for="">and/or, create a new owner:</label>
  <br><br>
  <label for="name">name:</label>
  <input type="text" name="owner[name]" id="owner_name"></input>
  <br><br>
  <input type="submit" value="Update Pet">
</form>
