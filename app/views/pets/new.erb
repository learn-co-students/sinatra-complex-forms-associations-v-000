<h1>Create a new Pet</h1>
<form action="/pets" method="post">
   <input type="text" name="pet[name]" id="pet_name" placeholder="Pet's name">
   <br>
   <br>
   <%Owner.all.each do |owner|%>
      <input type="checkbox" name="owner[id]" id="<%=owner.id%>" value="<%=owner.id%>"><%=owner.name%></input>
   <%end%>
   <br>
   <p>and/or Create a new owner</p>
   <label for="owner_name">Owner Name:</label>
   <input type="text" name="owner[name]" id="owner_name">
   <br>
   <input type="submit" name="Create Pet" value="Create Pet">

</form>
