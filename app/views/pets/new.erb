<h1>Create a new Pet</h1>
<form action="/pets" method="post">
  <label>Name:</label>
  <input type="text" name="pet_name" id="pet_name">
  <br>

  <label>Choose an existing owner:</label>
  <% Owner.all.each do |owner| %>
    <input type="checkbox" name="pet[owner_ids][]" value="<%=owner.id%>" id="<%=owner.id%>"><%=owner.name%></input>
  <% end %>
  <br>

  <label>Or create a new one:</label>
  <input type="text" name="owner[name]" placeholder="Owner Name:" id="owner_name">
  <br>

  <button type="submit" value="Create Pet">Create Pet</button>
</form>
