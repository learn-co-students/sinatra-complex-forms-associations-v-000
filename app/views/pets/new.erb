<h1>Create a new Pet</h1>

<form action="/pets" method="post">
	<label for="">New Pet Name:</label>
	<input type="text" name="pet[name]" id="pet_name">
	<br>
	<br>
	<label for="">Owner:</label>
	<% @owners.each do |owner| %>
		<input type="checkbox" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>">
		<%=owner.name%>
	<%end%>

	<br>
	<br>
	<label>and/or, create a new owner:</label>
      <input  type="text" id="owner_name" name="owner[name]"></input>
    <br></br>
	<input type="submit" value="Create Pet" id="Create Pet">
</form>
