<h1>Create a new Pet</h1>
<form method="post" action="/pets">
  <p>Your Pet's Name: <input type="text" name="pet[name]" id="pet_name"></p>
  <p>Your Pet's Owner: </p>
  <% Owner.all.each do |owner| %>
    <input type="checkbox"  name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>"><%= owner.name %>
  <% end %>
  <p>and/or, create a new owner for your pet:</p>
  <input type="text" name="pet[owner]" id="owner_name">
  <input type="submit" value="Create Pet">
</form>

