<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Name:</label>
  
  <br></br>
  
  <input type="text" name="pets[name]">
  
  <br></br>
  
  <label>Choose an existing Owner:</label>
  <br></br>
  
  <%@owner.all.each do |owner|%>
    <input type="checkbox" name="pet[owner_ids][]" value="<%=owner.id%>" id="<%=owner.id%>"><%=owner.name%></input>
  <%end%>
  <br></br>
  <label>and/or create a new owner:</label>
  <br></br>
  <label>Name:</label>
  <input type="text" name="owner[name]">
  <br></br>
  <input type="submit" value="Create Pet">
</form>