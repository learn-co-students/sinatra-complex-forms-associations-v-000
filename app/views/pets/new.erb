<h1>Create a new Pet</h1>

<form action="/pets" method="post">
  <label for="pet_name">Name:</label><br>
  <input type="text" name="pet[name]" id="pet_name">
  <br>
  <p>Choose an existing owner:</p>
  <% @owners.each do |owner| %>
    <input type="checkbox" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>"><%= owner.name %></input>
  <% end %>

  <br>

  <p>and/or, create a new owner:</p>

  <label for="owner_name">Name:</label><br>
  <input type="text" name="owner[name]" value="" id="owner_name">
  <br><br>
  <input type="submit" value="Create Pet">
</form>
