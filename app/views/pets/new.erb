<h1>Create a new Pet</h1>

<!-- Post to index page -->
<form action="/pets" method="POST">

  <label for="name">Name: </label>
  <input type="text" name="pet[name]" id="pet_name">

  <br></br>

  <label>Choose an existing owner:</label>
  <!-- Iterate through all owners to assign a checkbox to -->
  <% @owners.each do |owner| %>
    <input type="checkbox" name="pet[owner_id]" value="<%= owner.id %>" id="<%= owner.id %>">
      <%= owner.name %>
  <% end %>

  <br></br>

  <label>and/or, create a new owner:</label>
  <br></br>

  <input type="text" name="owner[name]" id="owner_name">

  <br></br>

  <input type="submit" value="Create Pet">
</form>
