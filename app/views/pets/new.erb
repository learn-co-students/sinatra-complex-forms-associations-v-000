<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <p>Name: <input id="pet_name" type="text" name="pet[name]"></p>

  <ul>
    <% Owner.all.each do |owner| %>
      <li>
        <input type="checkbox" 
               name="pet[owner_id]" 
               value="<%= owner.id%>" 
               id="<%= owner.id %>">
        <%= owner.name %>
      </li>
    <% end %>
  </ul>

  <p>and/or, create a new owner:</p>
  <p>Name: <input id="owner_name" type="text" name="owner[name]"></p>

  <input type="submit" value="Create Pet">
</form>

