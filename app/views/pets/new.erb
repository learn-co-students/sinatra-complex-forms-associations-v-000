 <h1>Create a new Pet</h1> 
<form method="POST" action="/pets">
  <label> Pet Name: </label>
  <br></br>
  <input type="text" name="pet[name]" id="pet_name">
   <br>
   <br>
  <br>
  <label> Choose an Existing Owner </label>
  <br></br>
  <% Owner.all.each do |owner| %>
  <input type="checkbox" value="<%= owner.id %>" name="pet[owner_id]" id="<%=owner.id %>"/> <%= owner.name %>
    <% end %>
    <br></br>
    <label>and/or Create an additional Owner</label>
    <input type="text" name="owner[name]" id="owner_name">
    <input type="submit" value="Create Pet">
</form>
