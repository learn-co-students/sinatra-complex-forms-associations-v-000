<h1>Create a new Pet</h1>

<form action="/pets" method="POST">

<label>Enter your pet's name:</label>
    <input type="text" name="pet[name]" id="pet_name"> 

<br></br>
  
    <input type="submit" value="Create Pet">

<label>Choose an existing owner:</label>

<%Owner.all.each do |owner|%>
    <input type="checkbox" name="owner_id" value="<%=owner.id%>" id="<%=owner.%>"><%owner.name%></input>
<%end%>

<label>Create a new Owner</label>

<br></br>

<label>Name:</label>

<br></br>

    <input type="text" name="owner[name]">

 <br></br>
  
    <input type="submit" value="Create Owner">

<br></br>

</form>

