<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet[name]">

  <br></br>

  <label>Choose an Owner:</label>

  <br></br>

  <%Owner.all.each do |owner|%>
      <input type="checkbox" name="pet[owner_ids][]" value="<%=owner.id%>" id="<%=owner.id%>"><%=owner.name%></input>
  <%end%>

  <label>and/or, create a new Owner:</label>
      <br></br>
      <label>Name:</label>
        <input  type="text" name="owner_name"></input>
      <br></br>

  <input type="submit" value="Create Pet">
</form>
