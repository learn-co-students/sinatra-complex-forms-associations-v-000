<h1>Create a new Pet</h1>

<form method="post" action="/pets">
  <label for="name">Name:</label>
  
  <br></br>
  
  <input type="text" id="pet_name" name="pet[name]">
  
  <br></br>
  
  <label>Choose an existing owner:</label>
  
  <br></br>
  
  <%@owners.each do |owner| %>
    <input type="checkbox" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>"><%=owner.name%>
    </input>
  <%end%>
  
  <br></br>
  
  <label>and/or create a new owner:</label>
  <br></br>
  <input type="text" id="owner_name" name="owner[name]">
  <br></br>
  <input type="submit" value="Create Pet">

</form>
  
