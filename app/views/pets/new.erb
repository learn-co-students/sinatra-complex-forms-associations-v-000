<h1>Create a new Pet</h1>
 
<form action="/pets" method="POST">
  <label>Name:</label>
  <input type="text" name="name" id="pet_name">
    <br>
 
  <%@owners.each do |owner|%>
    <input type="checkbox" name="pet[owner_ids][]" id="<%=owner.id%>" value="<%=owner.id%>"><%=owner.name%></input>
  <%end%>
 
  <br>
 
  <label>and/or, create a new owner:</label>
    <br>
    <label>name:</label>
      <input  type="text" name="owner_name"></input>
    <br>
  <input type="submit" value="Create Pet">
</form>
