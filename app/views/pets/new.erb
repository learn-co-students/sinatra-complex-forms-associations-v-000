<h1>Create a new Pet</h1>

<form class="" action="/pets" method="post">
   <label>Name:</label>
   <input type="text" name="pet[name]" id="pet_name"><br><br>
   <label>Choose an owner:</label>
   <% Owner.all.each do |owner| %>
      <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>"><%= owner.name %></input>
   <% end %><br><br>
   <label>and/or create new owner:</label>
   <label>Name:</label>
   <input type="text" name="owner[name]" id="owner_name"><br><br>
   <input type="submit" name="submit" value="Create Pet">
</form>
