<h1>Create a new Pet</h1>

<form method='POST' action='/pets'>

  <label>Name:</label>
  <br></br>
  <input type='text' name='pet[name]' id='pet_name'></input>
  <br></br>

  <label>Choose from owners:</input>

  <br></br>

  <%Owner.all.each do |owner|%>
    <input type='checkbox' value='<%=owner.id%>' name='pet[owner_id]' id='<%=owner.id%>'><%=owner.name%></input>
  <%end%>

  <br></br>

  <label>Or create a new owner</label>

  <br></br>

  <input type='text' name='owner[name]' id='owner_name'></input>

  <br></br>

  <input type='submit' value='Create Pet' id='submit'>

</form>
