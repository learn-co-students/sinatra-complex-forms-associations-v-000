<h1>Create a new Pet</h1>
  <br></br>
<form action="/pets" method='POST'>
<label>Name:</label>
<input type="text" name="pet[name]" id="pet_name"/>

  <br></br>
<label>Owner:</label>
<%@all_owners.each do |owner|%>
  <input type="checkbox" value="<%=owner.id%>" id="<%=owner.id%>" name="pet[owner_id]"><%=owner.name%></input>
<%end%>
  <br></br>

<label>Or create a new owner:</label>
  <br></br>
  <label>name:</label>
<input type="text" id="owner_name" name="owner[name]" />
  <br></br>
<input type="submit" value="Create Pet" />
</form>
