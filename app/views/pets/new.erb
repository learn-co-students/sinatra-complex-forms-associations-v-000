<h1>Create a new Pet</h1>
<form class="" action="/pets" method="post">
  <label>Pet Name:</label>
  <input type="text" name="pet[name]" id="pet_name" value=""><br>
  <h4>Choose a current owner:</h4>
  <% Owner.all.each do |owner| %>
    <input type="checkbox" id="<%=owner.id%>" name="pet[owner_id]" value="<%=owner.id%>"><%=owner.name%></input><br>

  <%end%>
  <h4>Or create a new owner:</h4>
  <input type="text" name="owner[name]" id="owner_name" value=""><br>
  <input type="submit" name="Create Pet" value="Create Pet">
</form>
