<h1>Create a new Pet</h1>
<form action="/pets" method="post">
  <label>Name: </label> <input type='text' name='pet[pet_name]' id='pet_name' /><br />
  <label>Select from existing owners:</label><br />
  <% @owners.each do |owner| %>
    <input type='checkbox' name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" /> <%= owner.name %></inmput><br />
  <% end %>
  <label>Or...create a new owner:</label><br />
  <input type='text' name="pet[owner_name]" id="owner_name" /><br />
  <input type='submit' name="submit" id="submit" value="Create Pet" />


</form>
