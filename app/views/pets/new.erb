<h1>Create a new Pet</h1>
<form action="/pets" method="POST">
  <label>Name:</label> 
  <input type="text" name="pet[name]" id="pet_name">
  <label>Choose an existing owner:</label>
  <%Owner.all.each do |owner|%>
    <input type="checkbox" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>"><%=owner.name%></input>
  <%end%>
    <label>and/or, create a new owner:</label>
    <br></br>
    <label>name:</label>
      <input  type="text" id="owner_name" name=owner[name]></input>
    <br></br>
  <input type="submit" value="Create Pet">
</form>

