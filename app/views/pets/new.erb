
    <h1>Create a new Pet</h1>
    <br><br>
    <form class="" action="/pets" method="post">

      <label>Name: </label>
      <input type="text" name="pet[name]" id="pet_name">
      <br><br>

      <label for="owner[pet_ids][]">Choose an exiting owners:</label>
      <br></br>
      <%@owners.each do |owner|%>
        <input type="checkbox" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>"><%=owner.name%></input>
      <%end%>
      <br><br>
      <label>Create a new owner:</label>
      <input type="text" name="owner[name]" id="owner_name"><br><br>
      <input type="submit" value="Create Pets">
    </form>
