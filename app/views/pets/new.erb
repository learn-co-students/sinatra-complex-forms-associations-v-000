<h1>Create a new Pet</h1>
<form action="/pets" method="POST">
 <p><label>Name:</label>
  <input type="text" name="pet[name]" id="pet_name"></p>

  <p><label>Choose an existing owner:</label>
  <%@owners.each do |owner|%>
   <input type="checkbox" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>">
   <%=owner.name%></input>
 <%end%></p>
 
    <label>and/or, create a new owner:</label>
   <br></br>
   <label>name:</label>
     <input  type="text" name="owner[name]" id="owner_name"></input>
   <br></br>
 <input type="submit" value="Create Pet">
</form>
