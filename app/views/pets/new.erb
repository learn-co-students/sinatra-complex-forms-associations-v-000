<h1>Create a new Pet</h1>

<form method="POST" action="/pets">
<input type="text" name="pet[name]" value="pet_name" id="pet_name">

<br></br>

<label>Choose the owner</label>
<%@owners.each do |owner|%>
  <input type="checkbox" name="pet[owner_id]"
  value="<%=owner.id%>" id="<%=owner.id%>"><%=owner.name%></input>
<%end%>

<br></br>

<label>Or create a new owner!</label>
<br></br>
  <label>Name: </label>
    <input type="text" name="owner[name]" id="owner_name"></input>
<br></br>

<input type="submit" value="Create Pet">
</form>
