<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Name:</label><br>
  <input type="text" name="pet[name]" id="pet_name"><br>
  <label>Select an existing owner:</label><br>
  <%Owner.all.each do |owner|%>
    <input type="checkbox" name="pet[owner_id]" id="<%= owner.name %>" value="<%=owner.id%>"><%=owner.name%></input>
  <%end%><br>
  <label>Or assign a new one:</label>
    <input  type="text" name="owner[name]" id="owner_name"></input><br>
  <input type="submit" value="Create Pet">
</form>
