<h1>Create a new Pet</h1>

<form method="POST" action="/pets">
  <label>Name: </label>
  <input type="text" id="pet_name" name="pet[name]">

  <br>

  <p>Who is it's owner:</p>
  <% @owners.all.each do |owner| %>
    <input type="checkbox" name="pet[owner_id]" value="<%= owner.id %>" id="<%= owner.id %>"><%= owner.name %></input>
  <% end %>

  <br>

  <p>Or create an owner: </p>
  <label>Owner's Name: </label>
  <input type="text" name="owner_name">

  <br><br>

  <input type="submit" value="Create Pet">
</form>
