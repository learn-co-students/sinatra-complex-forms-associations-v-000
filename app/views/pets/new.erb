<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet[name]" id="pet_name">

  <br></br>

  <label>Select Owner for Pet:</label>
  <% @owners.each do |o| %>
    <input type="checkbox" id="<%=o.id%>" value="<%=o.id%>" name="pet[owner_id]"><%=o.name%></input>
  <% end %>

  <br></br>

    <label>and/or, create a new owner:</label>
    <br></br>
    <label>name:</label>
      <input type="text" name="owner[name]" id="owner_name">
    <br></br>
  <input type="submit" value="Create Pet">
</form>
