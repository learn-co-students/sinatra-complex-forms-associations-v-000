<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>New Pet Name:</label>

  <br></br>

  <input type="text" name="pet[name]" id = "pet_name">

  <br></br>

  <%@owners.each do |owner|%>
    <input type="checkbox" name="pet[owner]" value="<%=owner.id%>" id="<%=owner.id%>"><%=owner.name%></input>
  <%end%>

  <br></br>
    <label>Create New Owner: name:</label>
      <input  type="text" name="owner_name"></input>
    <br></br>

  <input type="submit" value="Create Pet">
  </form>
