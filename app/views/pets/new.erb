<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>New Pet Name:</label>
  <br></br>

  <input type="text" name="pet[name]" id="pet_name">
  <br></br>

  <label> Choose and existing Owner:</label>

  <%@owners.each do |owner|%>
    <input type="checkbox" name="pet[owner_id]" value="<%=owner.id%>"
    id="<%=owner.id%>"><%=owner.name%></input>
  <%end%>
  <br></br>

  <label>and/or, create a new Owner:</label>
  <br></br>

  <label>New Owner Name:</label>

  <input type="text" name="owner[name]" id="owner_name" >
  <br></br>

  <input type="submit" value="Create Pet">
</form>
