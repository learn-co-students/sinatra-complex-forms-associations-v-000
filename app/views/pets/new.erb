<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet_name">

  <br></br>
  <p>Choose an existing owner:</p>
  <%@owners.each do |owner|%>
    <input type="checkbox" name="owner" value="<%=owner.id%>" id="<%=owner.id%>"><%=owner.name%></input>
  <%end%>
  <br></br>
    <label>or, create a new owner:</label>
    <br></br>
    <label>name:</label>
      <input  type="text" name="owner_name"></input>
    <br></br>

  <input type="submit" value="Create Pet">
</form>
