<h1>Create a new Pet</h1>

<form action="/pets" method="post">

  <label>Pet Name: </label><input type="text" name="pet[name]"
  id="pet_name">

  <br></br>

  <label>Select an owner</label>
  <br></br>

  <% @owners.each do |owner| %>
    <input type="checkbox" name="pet[owner_id]" id="<%= owner.id %>"
    value="<%= owner.id %>">
    <%= owner.name %></input>
  <br>
  <% end %>

  <br></br>
  <label>Or add a new owner</label>
  <br>

  <input type="text" name="owner_name" id="owner_name">

  <br></br>
  <input type="submit" value="Create Pet">
</form>
