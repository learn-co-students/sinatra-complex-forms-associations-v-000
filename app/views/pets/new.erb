<h1>Create a new Pet</h1>
<form action="/pets" method="post">
  <label>Name:</label>
  <input type="text" name="pet[name]" id="pet_name" >

  <h3>Existing Owners:</h3>

  <% Owner.all.each do |owner| %>
  <input type="checkbox" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>"> <%=owner.name%> </input>
  <% end %>

  <h3>Or you can create a new owner:</h3>

  <p><label>Owner Name:</label><input type="text" name="owner[name]" id="owner_name">

    <br><br>

  <input type="submit" name="submit" value="Create Pet">

</form>
