<h1>Create a new Pet</h1>

<form method="POST" action="/pets">
  <label>Pet Name: </label>
  <input type="text" id="pet_name" name="pet[name]"/>
  <br></br>

  <label>Choose an existing owner: </label>
  <% @owners.each do |owner| %>
    <input type="checkbox" id="<%= owner.id %>" name="pet[owner_id]" value="<%= owner.id %>"><%= owner.name %></input>
  <% end %>
  <br></br>

  <label>And/or create a new owner: </label>
  <input type="text" id="owner_name" name="owner[name]"/>
  <br></br>

  <input type="submit" value="Create Pet"/>
</form>
