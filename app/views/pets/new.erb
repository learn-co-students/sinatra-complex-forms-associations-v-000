<h1>Create a new Pet</h1>

<form method="post" action="/pets">

  <label>Name: </label>

    <input type="text" name="pet[name]" id="pet_name" >

  <label>Choose an existing owner:</label>

    <% Owner.all.each do |owner| %>
    <input type="checkbox" name="pet[owner_ids][]" value="<%= owner.id %>" id="<%= owner.id %>"><%= owner.name%></input>
    <% end %>


  <br>  </br>

  <label> or, create a new owner: </label>
  <label>name: </label>
  
    <input type="text" name="owner[name]" id="owner_name"></input>

    <input type="submit" value="Create Pet" id="Create Pet"></input>

</form>
