<h1>Create a new Pet</h1>

<form action="/pets" method="post">
    <label for="pet_name">Pet name:</label>
    <input type="text" name="pet[name]" id="pet_name">
    <br>
    <label for="pet_owner">Pet owner:</label>
    <% @owners.each do |owner| %>
        <br>
        <input type="checkbox" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>">
            <%= owner.name %>
        </input>
    <% end %>
    <br>
    <label>and/or, create a new pet:</label>
    <br>
    <label>name:</label>
    <input type="text" name="owner[name]" id="owner_name"></input>

    <input type="submit" value="Create Pet">
</form>
