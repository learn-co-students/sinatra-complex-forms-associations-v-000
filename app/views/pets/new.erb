<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
<label>Name: </label>

  <br></br>

  <input type="text" name="name" id="pet_name">

  <br></br>
  <label>Who owns this pet?</label>
    <%@owners.each do |owner|%>
      <input type="checkbox" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>">
      <%=owner.name%></input>
      <%end%>

    <br></br>
    <label>...and/or create a new owner:</label>
    <br></br>
    <label>Name: </label>
      <input type="text" name="owner[name]" id="owner_name"></input>
      <br></br>
      <input type="submit" value="Create Pet" id="Create Pet">

</form>
