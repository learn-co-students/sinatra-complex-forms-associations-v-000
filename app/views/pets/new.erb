<h1>Create a new Pet</h1>
<form action="/pets" method="POST">
  <h2>Pet Name: <input type="text" name="pet[name]" id="pet_name"></h2>
  <p><label>Choose an existing owner:</label></p>

  <%Owner.all.each do |owner|%>
    <input type="checkbox" name="pet[owner_id]" id="<%=owner.id%>"
     value="<%=owner.id%>"><%=owner.name%></input>
  <%end%>
<br>
    <p><label>and/or, create a new owner:</label></p>
    <br><br>
    <label>name:</label>
      <input  type="text" name="owner_name" id="owner_name"></input>
    <br><br>
  <input type="submit" id="Create Pet" value="Create Pet">
</form>
