<h1>Create a new Pet</h1>

<form action="/pets" method="post">
  <label for="pet_name">Pets Name: <input id="pet_name" type="text" name="pet[name]" value="pet_name"></label>
  <br>
  <p>Choose an Existing Owner:</p>
  <br>
  <% Owner.all.each do |owner| %>

  <input type="checkbox" name="pet[:owner_id][]" value="<%=owner.id%>" id="<%=owner.id%>"><%=owner.name%></input>

  <%end%>
  <br>
  <p>Or, Create a new Owner: </p>

  <input type="text" name="owner_name" value="">
  <input type="submit" name="submit" value="Create Pet">
</form>
