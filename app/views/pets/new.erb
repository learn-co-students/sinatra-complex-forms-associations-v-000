<h1>Create a new Pet</h1>

<form action="/pets" method="post">
  <label for="pet_name">Name:</label>
  <input id="pet_name" type="text" name="pet[name]"><br><br>

  <label>Choose an existing owner:</label><br>
  <%Owner.all.each do |owner|%>
    <input type="checkbox" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>"><%=owner.name%></input>
  <%end%><br><br>

  <label>or create new owner:</label><br>
  <label for="owner_name">Name:</label>
  <input id="owner_name" type="text" name="owner[name]"><br><br>

  <input type="submit" value="Create Pet">
</form>
