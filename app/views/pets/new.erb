<h1>Create a new Pet</h1>

<form action="/pets" method="POST">

  <label>name:</label>
    <input  type="text" id = "pet_name" name="pet[name]"></input>
  <br></br>


  <label>Choose an existing owner:</label>
  <br></br>

    <%Owner.all.each do |owner|%>
      <input type="checkbox" name="owner[name]" id="<%=owner.id%>" value="<%=owner.id%>"><%=owner.name%></input>
    <%end%>
    <br></br>

  <label>and/or, create a new owner:</label>
  <br></br>

    <label>name:</label>
      <input  type="text" name="owner_name"></input>
    <br></br>

  <input type="submit" value="Create Pet">

</form>
