<h1>Create a new Pet</h1>
<form action="/pets" method="post">
	<label>Name:</label>
	<br>
	<input type="text" name="pet[name]" id="pet_name">
	<br>
	<label>Choose an existing owner:</label>
	<br>
	<% @owners.each do |owner| %>
		<label for="<%=owner.id%>"><input type="checkbox" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>"><%=owner.name%></input></label>
	<%end%>
	<br>
	<label>and/or create a new owner:</label>
	<br>
	<label>Name:</label>
	<input type="text" name="owner[name]" id="owner_name">
	<br>
	<input type="submit" value="Create Pet" id="create_pet">
</form>

