<h1>Create a new Pet</h1>

<form action="/pets" method="post">
  <label for="name">Name:</label>

  <br></br>

  <input type="text" name="pet[name]" id="pet_name">

  <br></br>

  <label for="owners">Avalaible Owners:</label>

  <br></br>

  <% @owners.each do |owner| %>
    <input type="checkbox" name="pet[owner_id]" value="<%= owner.id %>"id="<%= owner.id %>"><%= owner.name %>
  <% end %>

  <br></br>

    <label>And/or, create a new owner:</label>
    <br></br>
    <label>Name:</label>
      <input type="text" name="owner[name]" id="owner_name">
    <br></br>
  <input type="submit" value="Create Pet">
 </form>
