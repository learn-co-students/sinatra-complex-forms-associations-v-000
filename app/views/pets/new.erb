<h1>Create a new Pet</h1>

<form method="POST" action="/pets">
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet[name]" id="pet_name">

  <br></br>

  <p>Choose from existing owners:</p>

  <% Owner.all.each do |owner|%>
    <input type="checkbox" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>"><%=owner.name%></input>
  <% end %>

  <br></br>

  <label>and/or, create a new owner</label>
  <br></br>
  <label>Name:</label>

  <input type="text" name="owner_name"></input>
  <br></br>

  <input type="submit" name="submit"  id="submit" value="Create Pet">
</form>
