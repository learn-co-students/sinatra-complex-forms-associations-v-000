<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label for="pet_name">Pet Name:</label><br>
  <input type="text" name="pet_name"><br><br>
  <label for="owner_id">Choose an existing owner:</label><br>
  <% @owners.each do |owner| %>
    <input id="<%= owner.id %>" type="checkbox" name="owner_id" value="<%= owner.id %>"><%= owner.name %></input><br>
  <% end %><br>
  <label for="owner[name]">And/or, create a new owner:</label><br>
  <input id="owner_name"  type="text" name="owner[name]"><br><br>
  <input type="submit" value="Create Pet">
</form>