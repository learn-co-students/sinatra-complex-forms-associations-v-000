<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet[name]" id="pet_name">

  <br></br>

  <% @owners.each do |owner| %>
    <input type="checkbox" name="pet[owner_ids][]" value="<%= owner.id %>" id="<%= owner.id %>"><label for="<%= owner.id %>"><%= owner.name %></label>
  <% end %>

  <p>and/or, create a new owner:</p>
  <p><label for="new_owner">name: </label><input type="text" name="owner_name" id="new_owner"></p>

  <input type="submit" value="Create Pet">
</form>
