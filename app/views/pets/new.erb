<h1>Create a new Pet</h1>

<form method="POST" action="/pets">
  <label>Name: </label>

    <br></br>

    <input type='text' name="pet_name" id="pet[name]">

    <br></br>

    <label>Choose an existing owner: </label>

    <br></br>

    <%@owners.each do |owner| %>
    <input type="checkbox" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>" >
    <%=owner.name%> </input>

    <%end%>

    <br></br>

    <label>or, create a new owner:</label>
      <br><br />
    <label>Name:</label>
      <input type="text" name="owner_name" >
      <br />
    <input type="submit" value='Create Pet' id='submit' />
</form>
