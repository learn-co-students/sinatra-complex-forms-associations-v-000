<h1>Create a new Pet</h1>

<form class="" action="/pets" method="post">
  <label> Name: </label>

  <input type="text" name="pet[name]" id="pet_name" value="">

  <label> Choose an existing owner:</label>

  <% Owner.all.each do |owner| %>
  <%= owner.name %>
  <input type="checkbox" name="pet[owner]" id="pet_owner" value="<%= owner.id %>">

  <% end %>

  <br>

  <label>and/or, create a new owner:</label>
  <label for="owner_name"><input type="text" name="owner[name]" id="owner_name" value=""></label>

  <input type="submit" id="submit" value="Create Pet">
</form>
