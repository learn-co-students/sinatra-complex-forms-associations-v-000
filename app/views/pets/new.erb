<h1>Create a new Pet</h1>
<form action="/pets" method="post">

  <label>Name:</label>
  <br></br>
  <input type="text" name="pet[name]" id="pet_name">
  <br></br>
 <h2>Choose an existing owner:</h2>
  <br></br>
  <%@owners.each do |o| %>
  <input type="checkbox" name="pet[owner_id]" value="<%=o.id%>" id="<%=o.name%>"><%=o.name%></input>
    <% end %>
  <br></br>
  <br></br>
  <h2>and/or, create a new owner:</h2>
  <br></br>

  <label>name:</label>
  <input type="text" name="owner[name]" id="owner_name">
  <br></br>
  <input type="submit" value="Create Pet">
</form>
