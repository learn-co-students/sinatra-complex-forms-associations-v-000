<h1>Create a new pet</h1>

<form action="/pets" method="POST">
  <label>Name:</label>

  <br></br>

    <input type="text" name="pet[name]" id="pet_name">

    <br></br>
    <h2>Choose an existing owner:</h2>
    <%@owners.each do |owner|%>
      <input type="checkbox" name="pet[owner_id][]" value="<%=owner.id%>" id="<%=owner.id%>"><%=owner.name%></input>
    <%end%>
    <h2>and/or, create a new owner:</h2>
        <br></br>
        <label>name:</label>
          <input type="text" name="owner_name"></input>
        <br></br>
    <input type="submit" value="Create Pet">
  </form>
