<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" name="pet[name]">

  <br></br>
  <label>Choose and existing owner:</label>

  <br></br>

  <%@owners.each do |pet|%>
    <input type="checkbox" name="pet[owner_ids][]" value="<%=owner.id%>" id="<%=owner.id%>"><%=owner.name%></input>
  <% end %>

  <br></br>

  <label>and/or create a new owner:</label>
  <br>
  <label>Name: </label>
  <input type="text" name="owner[name]" value="">
  <br>

  <input type="submit" value="Create Pet">
</form>
