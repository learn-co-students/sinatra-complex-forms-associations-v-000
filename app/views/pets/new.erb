<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
<label>Name:</label>

<br></br>

<input type="text" name="pet[name]" id="pet_name">

<br></br>

<label>Choose an existing owner:</label>

<br></br>

<%Owner.all.each do |pet|%>
  <input type="checkbox" name="pet[owner_id]" id="<%=pet.id%>" value="<%=pet.id%>"><%=pet.name%></input>
<%end%>

<br></br>

  <label>and/or, create a new owner:</label>
  <br></br>
  <label>name:</label>
    <input  type="text" name="owner_name"></input>
  <br></br>
<input type="submit" value="Create Pet">
</form>