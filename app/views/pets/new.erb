<h1>Create a new Pet</h1>
<form action='/pets' method='POST'>
  <p>Name:</p>
  <p><input type="text" name="pet[name]" id="pet_name"></p>
  
  <p>Choose an existing owner:</p>
  <% Owner.all.each do |owner| %>
    <input type="checkbox" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>"> <%=owner.name%></input>
  <% end %>
  
  <label>and/or, create a new owner:</label>
    <br></br>
    <label>name:</label>
    <input type="text" name="owner[name]" id="owner_name">
    <br></br>

  <p><input type="submit" name="submit" value="Create Pet"></p>


</form>
