<h1>Create a new Pet</h1>

<form action="/pets" method="post">
  <br></br>
  Name:
  <input type = "text" name = "pet[name]">
  <br></br>
  <%@owner.each do |owner|%>
    <input type="checkbox" name="pet[owner_id]" id="<%=owner.id%>"value = "<%=owner.id%>"> <%=owner.name%> </input>
  <%end%>
  <br></br>
  Create Owner:
    Name: <input type = "text" name = "owner_name"></input>
    Pet Name: <input type = "text" name = "pet_name"></input>
  <input type = "submit" value = "Create Pet">
</form>
