<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Name:</label>
  <br></br>

  <input type="text" name="pet_name">
  <br></br>

  <% Owner.all.each do |owner| %>
    <input type="checkbox" name="owner_id" value="<%= owner.id %>" id="<%= owner.id %>">
    <%= owner.name %>
  <% end %>
  <br></br>

  <label>and/or, create a new owner:</label>
  <br></br>

  <label>name:</label>
  <br></br>

  <input  type="text" name="owner_name"></input>
  <br></br>

  <input type="submit" value="Create Pet">
</form>
