<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Name:</label>

  <br>

  <input type="text" id="pet_name" name="pet[name]">

  <br>
  
  <label>Click to choose an existing owner:</label><br>
  <%@owners.each do |owner|%>
    <input type="radio" name="pet[owner_ids]" value="<%=owner.id%>" id="<%=owner.id%>"><%=owner.name%></input>
  <%end%>
  
  <br>
  
  <label>and/or, create a new owner:</label>
    <br>
    <label>Name:</label>
      <input  type="text" id="owner_name" name="owner[name]"></input>
    <br>

  <input type="submit" value="Create Pet">
</form>


