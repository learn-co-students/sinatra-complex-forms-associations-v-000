<h1>Create a new Pet</h1>
<form action="/pets" method="POST">
  <label>Name:</label><br>
  <input id="pet_name" type="text" name="pet[name]"><br><br>
  <label>Choose an existing owner:</label>
  <br>
  <% Owner.all.each do |owner| %>
  <input type="checkbox" name="pet[owner_id]" value="<%= owner.id %>" id="<%=owner.id%>"><%= owner.name %>
  <% end %>
  <br><br>
  <label>and/or, create new owner:</label><br><br>
  <label>Name:</label>
  <input id="owner_name" type="text" name="owner[name]"><br><br>
  <input type="submit" value="Create Pet">
</form>

