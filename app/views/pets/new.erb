<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label>Name of Pet:</label>
  <br></br>
  <input type="text" name="pet[name]" id="pet_name">

  <p>Choose from existing owners:</p>
  <% Owner.all.each do |owner| %>
    <input type="checkbox" name="pet[owner][]" value="<%=owner.id%>" id="<%=owner.id%>"><%=owner.name%></input>
  <%end%>
  <br></br>

  <label>or, create a new owner:</label>
  <br></br>
  <label>Name:</label>
    <input type="text" name="owner_name" id="owner_name"></input>
    <br></br>
    <input type="submit" value="Create Pet">

</form>